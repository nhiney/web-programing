{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "E:\\Software\\VisualStudio_Set\\MSBuild\\Current\\Bin\\MSBuild.exe",
            "args": [
                "${workspaceFolder}\\WebBanGIay\\WebBanGIay.csproj",
                "/p:Configuration=Debug",
                "/p:Platform=AnyCPU"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Start IIS Express",
            "type": "shell",
            "command": "C:\\Program Files\\IIS Express\\iisexpress.exe",
            "args": [
                "/path:${workspaceFolder}\\WebBanGIay",
                "/port:8081"
            ],
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^.*IIS Express is running.*$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Starting IIS Express",
                    "endsPattern": "IIS Express is running"
                }
            },
            "presentation": {
                "reveal": "always"
            }
        }
    ]
}