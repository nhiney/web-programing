@model IEnumerable<WebBanGIay.Models.KHUYENMAI>
@{
    ViewBag.Title = "Quản lý khuyến mãi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    /* SHARED ADMIN THEME STYLES (Synced with ProductAdmin) */
    .page-container {
        color: var(--text-main);
        padding: 24px;
        font-family: "Inter", sans-serif;
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 24px;
    }

    .page-title {
        font-size: 26px;
        font-weight: 700;
        color: var(--text-main);
        margin: 0;
    }

    /* Filter Bar */
    .filter-bar {
        display: flex;
        gap: 12px;
        align-items: center;
        flex-wrap: wrap;
    }

    .search-input {
        background: var(--bg-body);
        border: 1px solid var(--border-color);
        color: var(--text-main);
        border-radius: 8px;
        padding: 10px 16px;
        width: 260px;
        transition: 0.2s;
    }
    .search-input:focus {
        border-color: var(--accent-color);
        box-shadow: 0 0 0 2px var(--bg-active);
        outline: none;
    }

    .form-select-custom {
        background: var(--bg-body);
        border: 1px solid var(--border-color);
        color: var(--text-main);
        border-radius: 8px;
        padding: 10px 36px 10px 16px;
        transition: 0.2s;
        cursor: pointer;
    }
    .form-select-custom:focus {
        border-color: var(--accent-color);
        box-shadow: 0 0 0 2px var(--bg-active);
        outline: none;
    }

    .btn-search {
        padding: 10px 16px;
        border-radius: 8px;
        background: var(--accent-color);
        color: #fff;
        border: none;
        cursor: pointer;
        transition: 0.2s;
    }
    .btn-search:hover { filter: brightness(1.1); }

    .btn-reset {
        padding: 10px 16px;
        border-radius: 8px;
        background: var(--bg-card);
        color: var(--text-muted);
        border: 1px solid var(--border-color);
        text-decoration: none;
        transition: 0.2s;
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }
    .btn-reset:hover { background: var(--bg-hover); color: var(--text-main); }

    .btn-create {
        background: var(--bg-card);
        border: 1px solid var(--border-color);
        color: var(--text-main);
        padding: 10px 20px;
        font-weight: 600;
        border-radius: 8px;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        transition: 0.2s;
    }
    .btn-create:hover {
        background: var(--bg-hover);
        color: var(--accent-color);
        border-color: var(--accent-color);
    }

    /* Stats Cards (Simple & Professional) */
    .stat-card {
        background: var(--bg-card);
        border: 1px solid var(--border-color);
        border-radius: 12px;
        padding: 20px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        box-shadow: var(--shadow-card);
        transition: transform 0.2s;
        height: 100%;
    }
    .stat-card:hover { transform: translateY(-2px); }
    .stat-info h6 { color: var(--text-muted); font-size: 0.85rem; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 4px; }
    .stat-info h3 { color: var(--text-main); font-size: 1.8rem; font-weight: 700; margin: 0; }
    .stat-icon-box {
        width: 48px; height: 48px;
        border-radius: 10px;
        display: flex; align-items: center; justify-content: center;
        font-size: 1.5rem;
    }
    .icon-primary { background: rgba(78, 115, 223, 0.1); color: #4e73df; }
    .icon-success { background: rgba(28, 200, 138, 0.1); color: #1cc88a; }
    .icon-warning { background: rgba(246, 194, 62, 0.1); color: #f6c23e; }
    .icon-secondary { background: rgba(133, 135, 150, 0.1); color: #858796; }

    /* Table Styles */
    .table-responsive-custom {
        background: var(--bg-card);
        border-radius: 12px;
        border: 1px solid var(--border-color);
        overflow: hidden;
        box-shadow: var(--shadow-card);
    }
    .table-custom { width: 100%; border-collapse: collapse; }
    .table-custom thead { background: var(--bg-hover); }
    .table-custom th {
        padding: 16px 20px;
        text-align: left;
        font-size: 0.8rem;
        font-weight: 600;
        text-transform: uppercase;
        color: var(--text-label);
        border-bottom: 2px solid var(--border-color);
    }
    .table-custom td {
        padding: 16px 20px;
        border-bottom: 1px solid var(--border-color);
        color: var(--text-main);
        vertical-align: middle;
    }
    .table-custom tbody tr { background: var(--bg-card); transition: background 0.2s; }
    .table-custom tbody tr:hover { background: var(--bg-hover); }

    /* Badges */
    .status-badge { padding: 5px 12px; border-radius: 20px; font-size: 0.75rem; font-weight: 700; display: inline-flex; align-items: center; gap: 6px; }
    .status-active { background: rgba(28, 200, 138, 0.15); color: #1cc88a; }
    .status-upcoming { background: rgba(246, 194, 62, 0.15); color: #f6c23e; }
    .status-expired { background: rgba(231, 74, 59, 0.15); color: #e74a3b; }

    .discount-tag {
        font-weight: 700; color: var(--accent-color);
        background: rgba(78, 115, 223, 0.1); padding: 4px 10px; border-radius: 6px;
    }

    /* Actions */
    .action-btn {
        width: 36px; height: 36px;
        display: inline-flex; align-items: center; justify-content: center;
        border-radius: 8px;
        background: var(--bg-body);
        border: 1px solid var(--border-color);
        color: var(--text-muted);
        margin-right: 4px;
        transition: 0.2s;
        text-decoration: none;
    }
    .action-btn:hover {
        background: var(--accent-color); color: #fff;
        border-color: var(--accent-color); transform: translateY(-2px);
    }
    
    .promo-avatar {
        width: 40px; height: 40px;
        background: var(--accent-color);
        color: #fff;
        border-radius: 8px;
        display: flex; align-items: center; justify-content: center;
        font-weight: 700;
        font-size: 1.1rem;
        margin-right: 12px;
    }
    /* Theme Styles */
    .theme-tet .promo-avatar { background: #f6c23e; color: #856404; border: 1px solid #ffeeba; }
    .theme-christmas .promo-avatar { background: #e74a3b; color: #fff; border: 1px solid #bd2130; }
    .theme-blackfriday .promo-avatar { background: #333; color: #f6c23e; border: 1px solid #111; }
    .theme-summer .promo-avatar { background: #fd7e14; color: #fff; border: 1px solid #e8590c; }

</style>

<div class="page-container container-fluid">
    
    <!-- HEADER -->
    <div class="page-header">
        <div>
            <h2 class="page-title"><i class="bi bi-tags"></i> Quản lý khuyến mãi</h2>
            <p style="margin: 4px 0 0; color: var(--text-muted); font-size: 0.9rem;">Quản lý các chương trình giảm giá và sự kiện</p>
        </div>
        <a href="@Url.Action("Create")" class="btn-create">
            <i class="bi bi-plus-lg"></i> Thêm chương trình
        </a>
    </div>

    <!-- STATS DASHBOARD (Simplified) -->
    <div class="row g-3 mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="stat-card">
                <div class="stat-info">
                    <h6>Tổng số</h6>
                    <h3>@ViewBag.TotalCount</h3>
                </div>
                <div class="stat-icon-box icon-primary"><i class="bi bi-layers"></i></div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="stat-card">
                <div class="stat-info">
                    <h6>Đang diễn ra</h6>
                    <h3>@ViewBag.ActiveCount</h3>
                </div>
                <div class="stat-icon-box icon-success"><i class="bi bi-lightning-charge"></i></div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="stat-card">
                <div class="stat-info">
                    <h6>Sắp diễn ra</h6>
                    <h3>@ViewBag.UpcomingCount</h3>
                </div>
                <div class="stat-icon-box icon-warning"><i class="bi bi-hourglass-split"></i></div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="stat-card">
                <div class="stat-info">
                    <h6>Đã kết thúc</h6>
                    <h3>@ViewBag.ExpiredCount</h3>
                </div>
                <div class="stat-icon-box icon-secondary"><i class="bi bi-archive"></i></div>
            </div>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success d-flex align-items-center mb-4" role="alert" style="background: rgba(28, 200, 138, 0.15); border: 1px solid rgba(28, 200, 138, 0.3); color: #1cc88a;">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["Success"]
        </div>
    }

    <!-- FILTER BAR -->
    <div class="card mb-4 border-0 shadow-sm" style="background:var(--bg-card); border-radius:12px;">
        <div class="card-body p-3">
            <form method="get" class="filter-bar">
                <div class="d-flex align-items-center gap-2 flex-grow-1">
                    <input type="text" name="search" class="search-input w-100" placeholder="Tìm kiếm theo tên chương trình..." value="@ViewBag.CurrentSearch" style="max-width: 300px;">
                    
                    <select name="status" class="form-select-custom">
                        <option value="">-- Tất cả trạng thái --</option>
                        <option value="active" @(ViewBag.CurrentStatus == "active" ? "selected" : "")>Đang diễn ra</option>
                        <option value="upcoming" @(ViewBag.CurrentStatus == "upcoming" ? "selected" : "")>Sắp diễn ra</option>
                        <option value="expired" @(ViewBag.CurrentStatus == "expired" ? "selected" : "")>Đã kết thúc</option>
                    </select>

                    <button type="submit" class="btn-search">
                        <i class="bi bi-search"></i> Lọc
                    </button>
                    <a href="@Url.Action("Index")" class="btn-reset" title="Đặt lại">
                        <i class="bi bi-arrow-counterclockwise"></i>
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- TABLE -->
    <div class="table-responsive-custom">
        <table class="table-custom">
            <thead>
                <tr>
                    <th class="ps-4">Tên chương trình</th>
                    <th>Thời gian</th>
                    <th>Mức giảm</th>
                    <th>Trạng thái</th>
                    <th class="text-center">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="5" class="text-center py-5" style="color:var(--text-muted);">
                            <div class="py-4">
                                <i class="bi bi-inbox fs-1 d-block mb-3 opacity-50"></i>
                                <p class="mb-0">Không tìm thấy khuyến mãi nào phù hợp</p>
                            </div>
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        var isActive = DateTime.Now >= item.NGAYBATDAU && DateTime.Now <= item.NGAYKETTHUC;
                        var statusClass = isActive ? "status-active" : (DateTime.Now < item.NGAYBATDAU ? "status-upcoming" : "status-expired");
                        var statusIcon = isActive ? "bi-check-circle-fill" : (DateTime.Now < item.NGAYBATDAU ? "bi-clock-fill" : "bi-x-circle-fill");
                        var statusText = isActive ? "Đang diễn ra" : (DateTime.Now < item.NGAYBATDAU ? "Sắp diễn ra" : "Đã kết thúc");
                        
                        var theme = string.IsNullOrEmpty(item.MOTA) ? "default" : item.MOTA;
                        var themeIcon = "bi-star-fill";
                        if (theme == "tet") { themeIcon = "bi-flower1"; }
                        else if (theme == "christmas") { themeIcon = "bi-snow2"; }
                        else if (theme == "blackfriday") { themeIcon = "bi-tag-fill"; }
                        else if (theme == "summer") { themeIcon = "bi-sun-fill"; }

                        <tr class="theme-@theme">
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <div class="promo-avatar">
                                        <i class="bi @themeIcon"></i>
                                    </div>
                                    <div>
                                        <div style="font-weight:600;">@item.TENKHUYENMAI</div>
                                        <small style="color:var(--text-muted);">
                                            ID: #@item.MAKHUYENMAI • @(theme == "default" ? "Mặc định" : char.ToUpper(theme[0]) + theme.Substring(1))
                                        </small>
                                    </div>
                                </div>
                            </td>

                            <td>
                                <div class="d-flex flex-column" style="font-size:0.9rem;">
                                    <span style="color:var(--text-main);"><i class="bi bi-calendar-event me-2" style="color:var(--accent-color);"></i>@item.NGAYBATDAU.ToString("dd/MM/yyyy")</span>
                                    <span style="color:var(--text-muted);"><i class="bi bi-arrow-right me-2 ms-1"></i>@item.NGAYKETTHUC.ToString("dd/MM/yyyy")</span>
                                </div>
                            </td>
                            <td>
                                <span class="discount-tag">
                                    <i class="bi bi-arrow-down"></i> @item.PHANTRAMGIAM%
                                </span>
                            </td>
                            <td>
                                <span class="status-badge @statusClass">
                                    <i class="bi @statusIcon"></i> @statusText
                                </span>
                            </td>
                            <td class="text-center">
                                <a href="@Url.Action("Apply", new { id = item.MAKHUYENMAI })" class="action-btn" title="Áp dụng sản phẩm">
                                    <i class="bi bi-tags"></i>
                                </a>
                                <a href="@Url.Action("Edit", new { id = item.MAKHUYENMAI })" class="action-btn" title="Chỉnh sửa">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <form action="@Url.Action("Delete", new { id = item.MAKHUYENMAI })" method="post" class="d-inline" onsubmit="return confirm('Bạn có chắc muốn xóa khuyến mãi này không?');">
                                    <button type="submit" class="action-btn" title="Xóa">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
