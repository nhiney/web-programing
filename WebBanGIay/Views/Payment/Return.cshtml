@{
    ViewBag.Title = "Kết quả thanh toán";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card text-center">
                <div class="card-body p-5">
                    @if (ViewBag.Status == "success")
                    {
                        <div class="success-animation mb-4">
                            <i class="fas fa-check-circle text-success" style="font-size: 80px;"></i>
                        </div>
                        <h2 class="text-success mb-3">Thanh toán thành công!</h2>
                        <p class="text-muted">Cảm ơn bạn đã mua hàng</p>

                        <div class="my-4">
                            <p><strong>Mã đơn hàng:</strong> #@ViewBag.OrderId</p>
                            <p><strong>Mã giao dịch:</strong> @ViewBag.OrderCode</p>
                        </div>

                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            Đơn hàng của bạn đang được xử lý. Chúng tôi sẽ gửi thông tin đến email của bạn.
                        </div>

                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg mt-3">
                            <i class="fas fa-home"></i> Về trang chủ
                        </a>
                        <a href="@Url.Action("OrderHistory", "Order")" class="btn btn-outline-primary btn-lg mt-3 ms-2">
                            <i class="fas fa-list"></i> Xem đơn hàng
                        </a>
                    }
                    else
                    {
                        <div class="error-animation mb-4">
                            <i class="fas fa-times-circle text-danger" style="font-size: 80px;"></i>
                        </div>
                        <h2 class="text-danger mb-3">Thanh toán thất bại!</h2>
                        <p class="text-muted">@ViewBag.Message</p>

                        <div class="my-4">
                            <p><strong>Mã đơn hàng:</strong> #@ViewBag.OrderId</p>
                        </div>

                        <a href="@Url.Action("Index", "Payment", new { orderId = ViewBag.OrderId })" class="btn btn-warning btn-lg mt-3">
                            <i class="fas fa-redo"></i> Thử lại
                        </a>
                        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary btn-lg mt-3 ms-2">
                            <i class="fas fa-home"></i> Về trang chủ
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        border-radius: 15px;
        border: none;
    }

    .success-animation i, .error-animation i {
        animation: scaleIn 0.5s ease-in-out;
    }

    @@keyframes scaleIn {
        0% {
            transform: scale(0);
        }

        50% {
            transform: scale(1.1);
        }

        100% {
            transform: scale(1);
        }
    }

    .btn-lg {
        padding: 12px 30px;
        font-weight: 600;
    }
</style>