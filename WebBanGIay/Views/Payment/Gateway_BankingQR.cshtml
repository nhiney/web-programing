@{
    ViewBag.Title = "Chuyển khoản Ngân hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-lg border-0 text-center">
                <div class="card-header bg-success text-white py-3">
                    <h5 class="mb-0 fw-bold"><i class="fas fa-university me-2"></i>Chuyển khoản Ngân hàng</h5>
                </div>
                <div class="card-body p-4">
                    <p class="text-muted mb-3">Mở ứng dụng ngân hàng và quét mã QR bên dưới để thanh toán.</p>
                    
                    <div class="qr-container mb-4 p-3 bg-white rounded shadow-sm border position-relative">
                        <img src="@ViewBag.QRUrl" alt="VietQR Code" class="img-fluid rounded" style="max-height: 300px;">
                        <div class="mt-2 small text-muted"><i class="fas fa-bolt text-warning me-1"></i>VietQR hỗ trợ 24/7</div>
                    </div>

                    <div class="bank-details mb-4 p-3 rounded-4" style="background: rgba(13, 110, 253, 0.03); border: 1px dashed #0d6efd;">
                        <div class="small text-muted mb-1 text-uppercase fw-bold">Thông tin chuyển khoản</div>
                        <div class="fw-bold text-dark">@ViewBag.BankInfo</div>
                        <div class="mt-2 pt-2 border-top">
                            <div class="small text-muted">Nội dung chuyển khoản (Đã đính kèm trong QR):</div>
                            <div class="fw-bold text-primary fs-5">@ViewBag.QRContent</div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-3 px-3">
                        <span class="text-muted">Tổng cộng:</span>
                        <span class="h3 fw-bold text-danger mb-0">@string.Format("{0:N0}", ViewBag.TongTien) ₫</span>
                    </div>
                    
                    <div class="alert alert-warning bg-opacity-10 text-start border-warning border-opacity-25 small mb-4">
                        <i class="fas fa-shield-alt me-2"></i>Sau khi bấm "Xác nhận", hệ thống sẽ gửi mã xác thực (OTP) về email của bạn để hoàn tất đơn hàng.
                    </div>

                    @using (Html.BeginForm("ConfirmTransfer", "Payment", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        
                        <div class="row g-2 mb-3 text-start">
                            <div class="col-12">
                                <label class="small text-muted text-uppercase fw-bold mb-1">Email nhận OTP</label>
                                <input type="email" name="email" class="form-control form-control-sm bg-light" value="@ViewBag.UserEmail" placeholder="Email của bạn" required>
                            </div>
                            <div class="col-12 mt-2">
                                <label class="small text-muted text-uppercase fw-bold mb-1">Địa chỉ nhận hàng (Xác nhận lại)</label>
                                <input type="text" name="address" class="form-control form-control-sm bg-light" value="@ViewBag.UserAddress" placeholder="Địa chỉ giao hàng" required>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 py-3 fw-bold shadow-sm hover-scale rounded-pill">
                            <i class="fas fa-check-circle me-2"></i>XÁC NHẬN ĐÃ CHUYỂN KHOẢN
                        </button>
                    }
                    
                    <div class="text-center mt-3">
                         <a href="@Url.Action("Index")" class="text-muted small text-decoration-none hover-underline">
                              <i class="fas fa-arrow-left me-1"></i> Chọn phương thức khác
                         </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-scale {
        transition: transform 0.2s;
    }
    .hover-scale:hover {
        transform: scale(1.02);
    }
    .hover-underline:hover {
        text-decoration: underline !important;
        color: #0f172a !important;
    }
</style>
