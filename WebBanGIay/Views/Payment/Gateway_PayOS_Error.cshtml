@{
    ViewBag.Title = "Lỗi thanh toán PayOS";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5 text-center">
    <div class="alert alert-danger d-inline-block text-start p-4 shadow-sm" style="max-width: 600px;">
        <h4 class="alert-heading"><i class="fas fa-exclamation-triangle me-2"></i>Không thể khởi tạo thanh toán PayOS</h4>
        <hr>
        <p class="mb-0"><strong>Chi tiết lỗi:</strong> @ViewBag.Error</p>
        <div class="mt-3 text-muted small">
            <p>Để sử dụng phương thức này, vui lòng cập nhật <code>Web.config</code> với Key từ <a href="https://payos.vn" target="_blank">PayOS.vn</a>.</p>
        </div>
        <div class="mt-4 text-center">
            <a href="@Url.Action("Index")" class="btn btn-outline-danger">Quay lại chọn phương thức khác</a>
        </div>
    </div>
</div>
