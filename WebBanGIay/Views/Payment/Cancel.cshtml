@{
    ViewBag.Title = "Hủy thanh toán";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card text-center">
                <div class="card-body p-5">
                    <div class="mb-4">
                        <i class="fas fa-ban text-warning" style="font-size: 80px;"></i>
                    </div>
                    <h2 class="text-warning mb-3">Đã hủy thanh toán</h2>
                    <p class="text-muted">Bạn đã hủy giao dịch thanh toán</p>

                    @if (ViewBag.OrderId != null)
                    {
                        <div class="my-4">
                            <p><strong>Mã đơn hàng:</strong> #@ViewBag.OrderId</p>
                        </div>

                        <a href="@Url.Action("Index", "Payment", new { orderId = ViewBag.OrderId })" class="btn btn-primary btn-lg mt-3">
                            <i class="fas fa-redo"></i> Thanh toán lại
                        </a>
                    }

                    <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary btn-lg mt-3 ms-2">
                        <i class="fas fa-home"></i> Về trang chủ
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        border-radius: 15px;
        border: none;
    }

    .btn-lg {
        padding: 12px 30px;
        font-weight: 600;
    }
</style>
