@model WebBanGIay.Models.UserProfileViewModel
@{
    ViewBag.Title = "Hồ sơ cá nhân";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    /* Profile Styles inheriting from Layout */
    .profile-card {
        background: var(--bg-card);
        border: 1px solid var(--border-color);
        border-radius: 12px;
        box-shadow: var(--shadow-card);
        overflow: hidden;
    }

    .profile-header {
        background: linear-gradient(135deg, var(--bg-sidebar), var(--bg-card));
        padding: 30px;
        text-align: center;
        border-bottom: 1px solid var(--border-color);
    }

    .avatar-wrapper {
        position: relative;
        width: 120px;
        height: 120px;
        margin: 0 auto 15px;
    }

    .profile-avatar {
        width: 100%;
        height: 100%;
        border-radius: 50%;
        object-fit: cover;
        border: 4px solid var(--bg-card);
        box-shadow: 0 0 0 2px var(--accent-color);
    }

    .avatar-upload-btn {
        position: absolute;
        bottom: 0;
        right: 0;
        background: var(--accent-color);
        color: white;
        width: 36px;
        height: 36px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: transform 0.2s;
        border: 2px solid var(--bg-card);
    }

    .avatar-upload-btn:hover {
        transform: scale(1.1);
    }

    .nav-tabs-custom {
        border-bottom: 1px solid var(--border-color);
        padding: 0 20px;
    }

    .nav-tabs-custom .nav-link {
        color: var(--text-muted);
        border: none;
        border-bottom: 3px solid transparent;
        padding: 15px 20px;
        font-weight: 600;
        background: transparent;
    }

    .nav-tabs-custom .nav-link:hover {
        color: var(--text-main);
    }

    .nav-tabs-custom .nav-link.active {
        color: var(--accent-color);
        border-bottom-color: var(--accent-color);
        background: transparent;
    }

    .form-label {
        color: var(--text-label);
        font-weight: 500;
        font-size: 0.9rem;
    }

    .form-control-profile {
        background: var(--bg-body);
        border: 1px solid var(--border-color);
        color: var(--text-main);
        padding: 12px;
        border-radius: 8px;
    }

    .form-control-profile:focus {
        background: var(--bg-body);
        color: var(--text-main);
        border-color: var(--accent-color);
        box-shadow: 0 0 0 3px var(--bg-active);
    }

    .btn-save {
        background: var(--accent-color);
        color: white;
        padding: 12px 30px;
        border-radius: 8px;
        font-weight: 600;
        border: none;
        transition: all 0.2s;
    }

    .btn-save:hover {
        opacity: 0.9;
        transform: translateY(-1px);
    }
</style>

<div class="container-fluid p-4">
    
    <!-- Success/Error Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- LEFT COLUMN: AVATAR & INFO -->
        <div class="col-md-4 mb-4">
            <div class="profile-card h-100">
                <div class="profile-header">
                    <form id="avatarForm" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <div class="avatar-wrapper">
                            <img src="@(Model.AvatarUrl ?? "/source/images/shoes.png")" alt="Avatar" class="profile-avatar" id="profileAvatarDisplay" />
                            <label for="AvatarFile" class="avatar-upload-btn" title="Đổi ảnh đại diện">
                                <i class="bi bi-camera"></i>
                            </label>
                            <input type="file" id="AvatarFile" name="AvatarFile" accept="image/*" style="display:none;" onchange="this.form.submit()" />
                        </div>
                    </form>
                    <h4 style="color:var(--text-main); font-weight:700; margin-bottom:5px;">@Model.FullName</h4>
                    <p style="color:var(--text-muted); margin-bottom:15px;">@Model.Email</p>
                    <span class="badge bg-primary bg-opacity-10 text-primary px-3 py-2 rounded-pill">
                        @Model.AccountType
                    </span>
                </div>
                <div class="p-4">
                    <div class="d-flex justify-content-between mb-3 border-bottom border-secondary pb-2" style="border-color:var(--border-color)!important;">
                        <span style="color:var(--text-label)">Tài khoản</span>
                        <span style="color:var(--text-main); font-weight:600">@Model.UserName</span>
                    </div>
                    <div class="d-flex justify-content-between mb-3 border-bottom border-secondary pb-2" style="border-color:var(--border-color)!important;">
                        <span style="color:var(--text-label)">Ngày tham gia</span>
                        <span style="color:var(--text-main)">@Model.CreatedDate.Value.ToString("dd/MM/yyyy")</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- RIGHT COLUMN: EDIT FORMS -->
        <div class="col-md-8">
            <div class="profile-card">
                <ul class="nav nav-tabs nav-tabs-custom" id="profileTab" role="tablist">
                    <li class="nav-item">
                        <button class="nav-link active" id="info-tab" data-bs-toggle="tab" data-bs-target="#info" type="button" role="tab">
                            <i class="bi bi-person-lines-fill me-2"></i>Thông tin cá nhân
                        </button>
                    </li>
                    <li class="nav-item">
                        <button class="nav-link" id="password-tab" data-bs-toggle="tab" data-bs-target="#password" type="button" role="tab">
                            <i class="bi bi-shield-lock me-2"></i>Đổi mật khẩu
                        </button>
                    </li>
                </ul>

                <div class="tab-content p-4" id="profileTabContent">
                    
                    <!-- TAB 1: UPDATE INFO -->
                    <div class="tab-pane fade show active" id="info" role="tabpanel">
                        @using (Html.BeginForm("Profile", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label">Họ và tên</label>
                                    @Html.TextBoxFor(m => m.FullName, new { @class = "form-control form-control-profile" })
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Email</label>
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-profile" })
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Số điện thoại</label>
                                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control form-control-profile" })
                                </div>
                                <div class="col-md-12">
                                    <label class="form-label">Địa chỉ</label>
                                    @Html.TextAreaFor(m => m.Address, new { @class = "form-control form-control-profile", rows = "3" })
                                </div>
                                <div class="col-12 mt-4 text-end">
                                    <button type="submit" class="btn btn-save">
                                        <i class="bi bi-save me-2"></i>Lưu thay đổi
                                    </button>
                                </div>
                            </div>
                        }
                    </div>

                    <!-- TAB 2: CHANGE PASSWORD -->
                    <div class="tab-pane fade" id="password" role="tabpanel">
                        @if (TempData["SuccessPassword"] != null)
                        {
                            <div class="alert alert-success"><i class="bi bi-check-circle me-2"></i> @TempData["SuccessPassword"]</div>
                        }

                        @using (Html.BeginForm("Profile", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            <!-- Hiddens to allow ViewModel binding bypass validation for non-password fields if any (optional) -->
                            
                            <div class="row g-3">
                                <div class="col-md-12">
                                    <label class="form-label">Mật khẩu hiện tại</label>
                                    @Html.PasswordFor(m => m.CurrentPassword, new { @class = "form-control form-control-profile" })
                                    @Html.ValidationMessageFor(m => m.CurrentPassword, "", new { @class = "text-danger small" })
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Mật khẩu mới</label>
                                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control form-control-profile" })
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Xác nhận mật khẩu mới</label>
                                    @Html.PasswordFor(m => m.ConfirmNewPassword, new { @class = "form-control form-control-profile" })
                                    @Html.ValidationMessageFor(m => m.ConfirmNewPassword, "", new { @class = "text-danger small" })
                                </div>

                                <div class="col-12 mt-4 text-end">
                                    <button type="submit" class="btn btn-save">
                                        <i class="bi bi-key me-2"></i>Đổi mật khẩu
                                    </button>
                                </div>
                            </div>
                        }
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
