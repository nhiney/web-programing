@model IEnumerable<WebBanGIay.Models.HOADON>

@{
    ViewBag.Title = "Lịch sử mua hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="d-flex align-items-center mb-4">
        <h2 class="fw-bold mb-0">Lịch sử đơn hàng</h2>
        <span class="badge bg-primary ms-3 rounded-pill">@Model.Count() đơn</span>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="py-3 ps-4 text-nowrap">Mã đơn hàng</th>
                            <th class="py-3 text-nowrap">Ngày đặt</th>
                            <th class="py-3 text-nowrap">Người nhận</th>
                            <th class="py-3 text-nowrap">Tổng tiền</th>
                            <th class="py-3 text-nowrap">Trạng thái</th>
                            <th class="py-3 pe-4 text-end">Chi tiết</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold text-primary">#@item.MAHOADON</td>
                                <td class="text-muted">@(item.NGAYLAP.HasValue ? item.NGAYLAP.Value.ToString("dd/MM/yyyy HH:mm") : "N/A")</td>
                                <td>
                                    <div class="fw-bold">@item.TENNGUOINHAN</div>
                                    <div class="small text-muted">@item.DIENTHOAINGIAO</div>
                                </td>
                                <td class="fw-bold text-danger">@string.Format("{0:N0}", item.TONGTIEN) ₫</td>
                                <td>
                                    @{
                                        string statusClass = "bg-secondary";
                                        if (item.TRANGTHAI == "Đã thanh toán" || item.TRANGTHAI == "Hoàn thành") { statusClass = "bg-success"; }
                                        else if (item.TRANGTHAI == "Chờ xử lý") { statusClass = "bg-warning text-dark"; }
                                        else if (item.TRANGTHAI == "Đang giao") { statusClass = "bg-info text-dark"; }
                                        else if (item.TRANGTHAI == "Hủy") { statusClass = "bg-danger"; }
                                    }
                                    <span class="badge @statusClass rounded-pill py-2 px-3">@item.TRANGTHAI</span>
                                </td>
                                <td class="pe-4 text-end">
                                    <a href="@Url.Action("OrderDetail", "Account", new { id = item.MAHOADON })" class="btn btn-outline-primary btn-sm rounded-pill px-3">
                                        Xem <i class="fas fa-arrow-right ms-1"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <img src="https://cdni.iconscout.com/illustration/premium/thumb/empty-cart-2130356-1800917.png" alt="Empty Orders" style="width: 200px; opacity: 0.7;">
            <h4 class="text-muted mt-3">Bạn chưa có đơn hàng nào</h4>
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary rounded-pill px-4 mt-3">Mua sắm ngay</a>
        </div>
    }
</div>
