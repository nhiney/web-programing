        <!-- CÁC ƯU ĐÃI -->
        <h2 class="text-center fw-bold mb-5 display-4 text-danger">ƯU ĐÃI CỰC SỐC 12.12</h2>

        <div class="row g-5">

            <!-- Ưu đãi 1 -->
            <div class="col-lg-4 col-md-6">
                <div class="deal-card">
                    <div class="deal-header">GIẢM TỚI 50%</div>
                    <div class="deal-body">
