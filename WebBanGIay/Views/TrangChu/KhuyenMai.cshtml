        <div class="falling-item">🌺</div>
        <div class="falling-item">🧧</div>
        <div class="falling-item">🌸</div>
        <div class="falling-item">🍂</div>
        <div class="falling-item">🧧</div>
        <div class="falling-item">🌸</div>
        <div class="falling-item">🌺</div>
        <div class="falling-item">🧧</div>
        <div class="falling-item">🌸</div>
        <div class="falling-item">🍁</div>
        <div class="falling-item">🧧</div>
        <div class="falling-item">🌺</div>
        <div class="falling-item">🌸</div>
        <div class="falling-item">🧧</div>
        <div class="falling-item">🌸</div>
        <div class="falling-item">🌺</div>
        <div class="falling-item">🧧</div>
        <div class="falling-item">🌸</div>
    </div>


    <!-- HERO 12.12 -->
    <section class="hero-1212">
        <div class="container">
