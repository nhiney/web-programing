@{
    ViewBag.Title = "SIÊU SALE 12.12 - GIẢM TỚI 70% - MEODIGIAY";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>

    <!-- Bootstrap 5 + Font Awesome -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">

    <style>
        body {
            font-family: 'Segoe UI', system-ui, sans-serif;
            background: linear-gradient(135deg, #fff0f5, #ffe4e9);
            margin: 0;
            color: #212529;
        }

        /* HERO SALE 12.12 */
        .hero-1212 {
            background: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.8)),
                        url('/source/images/sale/1212-banner.jpg') center/cover no-repeat;
            color: white;
            padding: 180px 0 120px;
            text-align: center;
        }
        .hero-1212 h1 {
            font-size: 5rem;
            font-weight: 900;
            text-shadow: 0 8px 25px rgba(0,0,0,0.8);
            letter-spacing: 5px;
        }
        .hero-1212 .badge-1212 {
            background: #ff1744;
            color: white;
            padding: 15px 40px;
            border-radius: 50px;
            font-size: 2rem;
            font-weight: bold;
            animation: pulse 2s infinite;
            box-shadow: 0 0 30px rgba(255,23,68,0.8);
        }

        /* CARD KHUYẾN MÃI */
        .deal-card {
            background: white;
            border-radius: 24px;
            overflow: hidden;
            box-shadow: 0 15px 40px rgba(255,23,68,0.15);
            transition: all 0.4s ease;
            height: 100%;
        }
        .deal-card:hover {
            transform: translateY(-20px);
            box-shadow: 0 35px 80px rgba(255,23,68,0.3);
        }
        .deal-header {
            background: linear-gradient(135deg, #ff1744, #ff4569);
            color: white;
            padding: 25px;
            text-align: center;
            font-size: 1.5rem;
            font-weight: 800;
        }
        .deal-body {
            padding: 30px;
            text-align: center;
        }
        .deal-discount {
            font-size: 3.5rem;
            font-weight: 900;
            color: #ff1744;
            margin: 10px 0;
        }
        .deal-code {
            background: #fff0f0;
            color: #d00000;
            padding: 12px 30px;
            border-radius: 50px;
            font-size: 1.4rem;
            font-weight: bold;
            border: 3px dashed #ff1744;
            display: inline-block;
            margin: 15px 0;
        }

        .countdown {
            background: #000;
            color: #00ff88;
            padding: 25px;
            border-radius: 20px;
            font-family: 'Courier New', monospace;
            font-size: 2.2rem;
            font-weight: bold;
            letter-spacing: 8px;
            text-align: center;
            margin: 40px auto;
            max-width: 600px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.5);
        }

        .btn-shopnow {
            background: linear-gradient(135deg, #ff1744, #ff4569);
            color: white;
            padding: 18px 60px;
            border-radius: 50px;
            font-weight: 700;
            font-size: 1.4rem;
            box-shadow: 0 12px 35px rgba(255,23,68,0.5);
            transition: all 0.3s;
        }
        .btn-shopnow:hover {
            transform: translateY(-8px);
            box-shadow: 0 20px 50px rgba(255,23,68,0.7);
            color: white;
        }

        /* HIỆU ỨNG RƠI */
        .falling-elements {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
            pointer-events: none;
            z-index: 1;
        }

        .falling-item {
            position: absolute;
            top: -50px;
            font-size: 30px;
            animation: fall linear infinite;
            opacity: 0.8;
        }

        @keyframes fall {
            0% {
                top: -50px;
                transform: translateX(0) rotate(0deg);
            }
            100% {
                top: 100vh;
                transform: translateX(20px) rotate(360deg);
            }
        }

        /* Tạo độ trễ và tốc độ ngẫu nhiên cho các items */
        .falling-item:nth-child(1) { left: 5%; animation-duration: 8s; animation-delay: 0s; }
        .falling-item:nth-child(2) { left: 15%; animation-duration: 12s; animation-delay: 2s; }
        .falling-item:nth-child(3) { left: 25%; animation-duration: 10s; animation-delay: 4s; }
        .falling-item:nth-child(4) { left: 35%; animation-duration: 9s; animation-delay: 1s; }
        .falling-item:nth-child(5) { left: 45%; animation-duration: 11s; animation-delay: 3s; }
        .falling-item:nth-child(6) { left: 55%; animation-duration: 13s; animation-delay: 5s; }
        .falling-item:nth-child(7) { left: 65%; animation-duration: 8s; animation-delay: 2.5s; }
        .falling-item:nth-child(8) { left: 75%; animation-duration: 10s; animation-delay: 1.5s; }
        .falling-item:nth-child(9) { left: 85%; animation-duration: 12s; animation-delay: 3.5s; }
        .falling-item:nth-child(10) { left: 95%; animation-duration: 9s; animation-delay: 0.5s; }
        .falling-item:nth-child(11) { left: 10%; animation-duration: 11s; animation-delay: 4.5s; }
        .falling-item:nth-child(12) { left: 20%; animation-duration: 10s; animation-delay: 2s; }
        .falling-item:nth-child(13) { left: 30%; animation-duration: 13s; animation-delay: 1s; }
        .falling-item:nth-child(14) { left: 40%; animation-duration: 9s; animation-delay: 3s; }
        .falling-item:nth-child(15) { left: 50%; animation-duration: 12s; animation-delay: 5s; }
        .falling-item:nth-child(16) { left: 60%; animation-duration: 8s; animation-delay: 0s; }
        .falling-item:nth-child(17) { left: 70%; animation-duration: 11s; animation-delay: 2.5s; }
        .falling-item:nth-child(18) { left: 80%; animation-duration: 10s; animation-delay: 4s; }
        .falling-item:nth-child(19) { left: 90%; animation-duration: 9s; animation-delay: 1.5s; }
        .falling-item:nth-child(20) { left: 8%; animation-duration: 13s; animation-delay: 3.5s; }

        @keyframes pulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.05); }
            100% { transform: scale(1); }
        }
    </style>
</head>
<body>

    <!-- HIỆU ỨNG RƠI -->
    <div class="falling-elements">
