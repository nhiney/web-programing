        <!-- NÚT VỀ TRANG CHỦ -->
        <div class="text-center my-5 py-5">
            <a href="@Url.Action("Index", "TrangChu")" class="btn btn-dark btn-lg px-5 py-4 rounded-pill">
                <i class="fas fa-home me-3"></i> QUAY LẠI TRANG CHỦ
