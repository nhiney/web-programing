@{
    ViewBag.Title = "Liên Hệ - MEODIGIAY";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>@ViewBag.Title</title>

        <!-- Bootstrap 5.3 + Font Awesome 6 -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">

        <style>
            :root {
                --primary: #ff3b30;
                --primary-dark: #e6332a;
            }

            body {
                font-family: 'Segoe UI', system-ui, sans-serif;
                background: #f8f9fa;
                margin: 0;
                padding: 0;
                color: #212529;
            }

            /* HERO */
            .hero {
                background: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.75)), url('/source/images/lienhe/contact-bg.jpg') center/cover no-repeat;
                color: white;
                padding: 180px 0 120px;
                text-align: center;
            }

                .hero h1 {
                    font-size: 4.2rem;
                    font-weight: 900;
                    text-shadow: 0 6px 20px rgba(0,0,0,0.8);
                }

            }

            .hero p {
                font-size: 1.5rem;
                max-width: 800px;
                margin: 25px auto 0;
                opacity: 0.95;
            }

            /* CARD LIÊN HỆ */
            .contact-card {
                background: white;
                background: white;
                border-radius: 24px;
                padding: 40px 30px;
                text-align: center;
                box-shadow: 0 15px 45px rgba(0,0,0,0.1);
                transition: all 0.4s ease;
                height: 100%;
                border: none;
            }

                .contact-card:hover {
                    transform: translateY(-20px);
                    box-shadow: 0 35px 80px rgba(255,59,48,0.22);
                }

            .contact-icon {
                width: 100px;
                height: 100px;
                background: linear-gradient(135deg, var(--primary), var(--primary-dark));
                color: white;
                border-radius: 50%;
                font-size: 3rem;
                margin: 0 auto 25px;
                display: grid;
                place-items: center;
                box-shadow: 0 12px 35px rgba(255,59,48,0.4);
            }

            /* FORM */
            .form-control, .form-select, textarea.form-control {
                border-radius: 16px;
                padding: 14px 20px;
                font-size: 1.05rem;
                border: 2px solid #eee;
                transition: all 0.3s;
            }

                .form-control:focus, .form-select:focus, textarea.form-control:focus {
                    border-color: var(--primary);
                    box-shadow: 0 0 0 0.25rem rgba(255,59,48,0.15);
                }

            .btn-send {
                background: linear-gradient(135deg, var(--primary), var(--primary-dark));
                color: white;
                padding: 16px 60px;
                border-radius: 50px;
                font-weight: 700;
                font-size: 1.2rem;
                border: none;
                box-shadow: 0 12px 35px rgba(255,59,48,0.45);
                transition: all 0.3s;
            }

                .btn-send:hover {
                    transform: translateY(-6px);
                    box-shadow: 0 20px 50px rgba(255,59,48,0.6);
                    color: white;
                }

            .map-container {
                border-radius: 24px;
                overflow: hidden;
                box-shadow: 0 20px 60px rgba(0,0,0,0.18);
                height: 520px;
            }

            .back-home {
                background: #212529;
                color: white;
                padding: 16px 50px;
                border-radius: 50px;
                font-weight: 600;
                font-size: 1.1rem;
                text-decoration: none;
                display: inline-block;
                transition: all 0.3s;
            }

                .back-home:hover {
                    background: var(--primary);
                    transform: translateY(-5px);
                    color: white;
                }
        </style>
    </head>
    <body>

        <!-- HERO -->
        <section class="hero">
            <div class="container">
                <h1>LIÊN HỆ MEODIGIAY</h1>
                <p>Hotline hỗ trợ 24/7 • Phản hồi trong vòng 2 giờ • Giao hàng toàn quốc</p>
            </div>
        </section>

        <div class="container my-5 py-5">

            <!-- 3 THÔNG TIN LIÊN HỆ -->
            <div class="row g-5 mb-5 justify-content-center">
                <div class="col-lg-4 col-md-6">
                    <div class="contact-card">
                        <div class="contact-icon"><i class="fas fa-map-marker-alt"></i></div>
                        <h4 class="fw-bold">Địa chỉ</h4>
                        <p class="text-muted fs-5">
                            123 Đường Giày Đẹp<br>
                            Phường 5, Quận 3<br>
                            TP. Hồ Chí Minh
                        </p>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6">
                    <div class="contact-card">
                        <div class="contact-icon"><i class="fas fa-phone-alt"></i></div>
                        <h4 class="fw-bold">Hotline</h4>
                        <p class="text-danger fs-3 fw-bold mb-1">1900.123.456</p>
                        <p class="text-muted">8:00 – 21:00 (Tất cả các ngày)</p>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6">
                    <div class="contact-card">
                        <div class="contact-icon"><i class="fas fa-envelope"></i></div>
                        <h4 class="fw-bold">Email</h4>
                        <p class="text-primary fs-5 fw-bold">support@meodigiay.com</p>
                        <p class="text-muted">Phản hồi trong 1–2 giờ</p>
                    </div>
                </div>
            </div>

            <div class="row g-5 align-items-start">
                <!-- FORM LIÊN HỆ -->
                <div class="col-lg-6">
                    <div class="col-lg-6 d-flex align-items-center justify-content-center">
                        <div class="text-center">
                            <div class="mb-5">
                                <i class="fab fa-zalo fa-8x text-primary mb-4"></i>
                                <h2 class="fw-bold mb-3">Chat ngay với MEODIGIAY</h2>
                                <p class="text-muted fs-5">Tư vấn size, giá, ship, đổi trả... chỉ trong 30 giây!</p>
                            </div>

                            <a href="https://zalo.me/0908817279"
                               class="btn btn-zalo ROUNDED-pill shadow-lg px-5 py-4 fs-3 fw-bold"
                               style="font-size: 1.5rem !important;">
                                <i class="fab fa-zalo me-3"></i>
                                NHẮN TIN QUA ZALO NGAY
                            </a>

                            <div class="mt-4">
                                <small class="text-muted">
                                    <i class="fas fa-check-circle text-success me-2"></i>
                                    Phản hồi trong vòng 1 phút • 8h–22h mỗi ngày
                                </small>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- BẢN ĐỒ -->
                <div class="col-lg-6">
                    <h3 class="text-center fw-bold mb-4">Vị trí cửa hàng</h3>
                    <div class="map-container">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.447493475849!2d106.6956143!3d10.7763778!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752f38d2a7f4b7%3A0x88c8e69d4f5a0c7a!2sMEODIGIAY!5e0!3m2!1svi!2s!4v1234567890"
                                width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy">
                        </iframe>
                    </div>
                    <p class="text-center text-muted mt-3 fs-5">
                        <i class="fas fa-clock me-2"></i>
                        Giờ mở cửa: 8:00 – 21:00 (Tất cả các ngày trong tuần)
                    </p>
                </div>
            </div>

            <!-- NÚT QUAY LẠI TRANG CHỦ -->
            <div class="text-center my-5 py-5">
                <a href="@Url.Action("Index", "TrangChu")" class="back-home">
                    <i class="fas fa-arrow-left me-3"></i> QUAY LẠI TRANG CHỦ
                </a>
            </div>
        </div>

        <!-- Bootstrap 5 JS -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>