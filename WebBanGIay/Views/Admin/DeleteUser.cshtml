@model WebBanGIay.Models.TAIKHOAN
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Delete User";
}

<style>
    .delete-card {
        background: #0c1624;
        border: 1px solid #1b2b41;
        border-radius: 12px;
        color: #e4edf7;
    }
    .delete-card-header {
        background: #dc2626;
        color: white;
        padding: 20px;
        border-radius: 12px 12px 0 0;
    }
    .delete-card-body {
        padding: 30px;
        text-align: center;
    }
</style>

<div class="container mt-5" style="max-width: 500px;">
    <div class="delete-card shadow-lg">

        <div class="delete-card-header d-flex align-items-center justify-content-center">
            <i class="bi bi-exclamation-triangle-fill me-2" style="font-size:1.5rem;"></i>
            <h5 class="mb-0">Xác nhận xóa tài khoản</h5>
        </div>

        <div class="delete-card-body">
            <p class="fs-5">
                Bạn có chắc chắn muốn xóa tài khoản:
            </p>
            <p>
                <strong class="text-primary fs-4">@Model.TENTAIKHOAN</strong>
            </p>
            <p class="text-muted small">
                Mã: @Model.MATAIKHOAN
            </p>

            <div class="alert alert-warning mt-3">
                <i class="bi bi-info-circle me-1"></i>
                Hành động này <strong>không thể hoàn tác</strong>!
            </div>

            @using (Html.BeginForm("DeleteUser", "Admin", new { id = Model.MATAIKHOAN }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="d-flex justify-content-center gap-3 mt-4">
                    <button type="submit" class="btn btn-danger px-4 py-2">
                        <i class="bi bi-trash-fill me-1"></i> Xóa
                    </button>
                    <a href="@Url.Action("Users","Admin")" class="btn btn-outline-secondary px-4 py-2">
                        <i class="bi bi-x-circle me-1"></i> Hủy
                    </a>
                </div>
            }
        </div>
    </div>
</div>
