@model WebBanGIay.Models.TAIKHOAN
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Delete User";
}

<div class="container mt-5" style="max-width: 600px;">
    <div class="card shadow-lg border-0 rounded-4">

        <div class="card-header bg-danger text-white rounded-top py-3 d-flex align-items-center">
            <i class="bi bi-exclamation-triangle-fill me-2" style="font-size:1.5rem;"></i>
            <h5 class="mb-0">Confirm Delete User</h5>
        </div>

        <div class="card-body px-4 py-4 text-center">
            <p class="fs-5">
                Are you sure you want to delete the account:
                <strong class="text-primary">@Model.TENTAIKHOAN</strong>
                (<strong>@Model.MATAIKHOAN</strong>)?
            </p>

            <p class="text-muted">
                <i class="bi bi-info-circle-fill me-1"></i>
                This action <strong>cannot be undone</strong>.
            </p>

            @using (Html.BeginForm("DeleteUser", "Admin", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.MATAIKHOAN)

                <div class="d-flex justify-content-center gap-3 mt-4">
                    <button type="submit" class="btn btn-danger px-4">
                        <i class="bi bi-trash-fill me-1"></i> Delete
                    </button>
                    <a href="@Url.Action("Users","Admin")" class="btn btn-secondary px-4">
                        <i class="bi bi-x-circle me-1"></i> Cancel
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .card p {
        margin-bottom: 1rem;
    }

    .card .btn {
        font-weight: 600;
    }

        .card .btn i {
            vertical-align: middle;
        }
</style>
