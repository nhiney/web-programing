@model WebBanGIay.Models.TAIKHOAN
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Sửa tài khoản";
    var khList = ViewBag.KhachHangList as IEnumerable<WebBanGIay.Models.KHACHHANG>;
    var nvList = ViewBag.NhanVienList as IEnumerable<WebBanGIay.Models.NHANVIEN>;
    
    var roleList = new List<SelectListItem>
    {
        new SelectListItem { Value = "KHÁCH HÀNG", Text = "Khách hàng" },
        new SelectListItem { Value = "NHÂN VIÊN", Text = "Nhân viên" },
        new SelectListItem { Value = "QUẢN TRỊ", Text = "Quản trị" }
    };
}

<style>
    .edit-card {
        background: #0c1624;
        border: 1px solid #1b2b41;
        border-radius: 12px;
        color: #e4edf7;
    }
    .edit-card-header {
        background: #0891b2;
        color: white;
        padding: 16px 20px;
        border-radius: 12px 12px 0 0;
    }
    .edit-card-body {
        padding: 24px;
    }
    .dark-label {
        color: #bcd7ff;
        font-weight: 600;
        margin-bottom: 6px;
    }
    .dark-input, .dark-select {
        background: #0b1220 !important;
        border: 1px solid #243347 !important;
        color: #dbe9ff !important;
        padding: 10px !important;
        border-radius: 6px !important;
    }
    .dark-input:focus, .dark-select:focus {
        border-color: #3a5275 !important;
        box-shadow: 0 0 0 3px rgba(0,136,255,0.2) !important;
    }
</style>

<div class="container mt-4" style="max-width: 650px;">
    <div class="edit-card shadow-lg">

        <div class="edit-card-header d-flex align-items-center">
            <i class="bi bi-pencil-square me-2" style="font-size:1.3rem;"></i>
            <h5 class="mb-0">Sửa thông tin User: @Model.TENTAIKHOAN</h5>
        </div>

        <div class="edit-card-body">
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">@TempData["Error"]</div>
            }

            @using (Html.BeginForm("EditUser", "Admin", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.MATAIKHOAN)

                <div class="mb-3">
                    <label class="dark-label">Mã tài khoản</label>
                    <input type="text" class="form-control dark-input" value="@Model.MATAIKHOAN" disabled />
                </div>

                <div class="mb-3">
                    <label class="dark-label">Tên tài khoản</label>
                    @Html.TextBoxFor(m => m.TENTAIKHOAN, new { @class = "form-control dark-input" })
                    @Html.ValidationMessageFor(m => m.TENTAIKHOAN, "", new { @class = "text-danger small" })
                </div>

                <div class="mb-3">
                    <label class="dark-label">Mật khẩu mới <span class="text-muted small">(để trống nếu không đổi)</span></label>
                    <input type="password" name="MATKHAU" class="form-control dark-input" placeholder="Nhập mật khẩu mới..." />
                </div>

                <div class="mb-3">
                    <label class="dark-label">Loại tài khoản</label>
                    @Html.DropDownListFor(m => m.LOAITAIKHOAN, roleList, "Chọn loại", new { @class = "form-select dark-select", id = "roleSelect" })
                </div>

                <div id="khSection" class="mb-3">
                    <label class="dark-label">Khách hàng liên kết</label>
                    @Html.DropDownListFor(m => m.MAKHACHHANG, new SelectList(khList ?? new List<WebBanGIay.Models.KHACHHANG>(), "MAKHACHHANG", "HOTEN", Model.MAKHACHHANG), "-- không liên kết --", new { @class = "form-select dark-select" })
                </div>

                <div id="nvSection" class="mb-3">
                    <label class="dark-label">Nhân viên liên kết</label>
                    @Html.DropDownListFor(m => m.MANHANVIEN, new SelectList(nvList ?? new List<WebBanGIay.Models.NHANVIEN>(), "MANHANVIEN", "HOTEN", Model.MANHANVIEN), "-- không liên kết --", new { @class = "form-select dark-select" })
                </div>

                <div class="d-flex justify-content-center gap-3 mt-4">
                    <button type="submit" class="btn btn-success px-4 py-2">
                        <i class="bi bi-check-circle me-1"></i> Lưu thay đổi
                    </button>
                    <a href="@Url.Action("Users","Admin")" class="btn btn-outline-secondary px-4 py-2">
                        <i class="bi bi-x-circle me-1"></i> Hủy
                    </a>
                </div>
            }
        </div>
    </div>
</div>
