@model IEnumerable<WebBanGIay.Models.HOADON>
@{
    ViewBag.Title = "Quản lý đơn hàng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    var page = ViewBag.Page ?? 1;
    var totalPages = ViewBag.TotalPages ?? 1;
    var query = ViewBag.Query as string ?? "";
    var currentStatus = ViewBag.Status as string ?? "";
}

<div class="container-fluid p-4" style="color:#d8e5f7;">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 style="color:#fff; font-weight:700;"><i class="bi bi-receipt"></i> Qu ản lý đơn hàng</h2>
    </div>

    <div class="card bg-dark border-secondary mb-4">
        <div class="card-body p-3">
            <form method="get" class="row g-3 align-items-center">
                <div class="col-auto">
                    <input type="text" name="q" class="form-control bg-dark text-light border-secondary" 
                           placeholder="Mã đơn / Tên KH..." value="@query">
                </div>
                <div class="col-auto">
                    <select name="status" class="form-select bg-dark text-light border-secondary">
                        <option value="">-- Tất cả trạng thái --</option>
                        <option value="CHỜ XỬ LÝ" @(currentStatus == "CHỜ XỬ LÝ" ? "selected" : "")>CHỜ XỬ LÝ</option>
                        <option value="ĐÃ GIAO" @(currentStatus == "ĐÃ GIAO" ? "selected" : "")>ĐÃ GIAO</option>
                        <option value="HOÀN THÀNH" @(currentStatus == "HOÀN THÀNH" ? "selected" : "")>HOÀN THÀNH</option>
                        <option value="ĐÃ HỦY" @(currentStatus == "ĐÃ HỦY" ? "selected" : "")>ĐÃ HỦY</option>
                    </select>
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-primary"><i class="bi bi-search"></i> Tìm kiếm</button>
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">Reset</a>
                </div>
            </form>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="bi bi-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="table-responsive rounded border border-secondary" style="background: #0c1624;">
        <table class="table table-dark table-hover mb-0">
            <thead style="background:#111f33;">
                <tr class="text-uppercase text-secondary" style="font-size:0.85rem;">
                    <th>Mã đơn</th>
                    <th>Khách hàng</th>
                    <th>Ngày lập</th>
                    <th>Tổng tiền</th>
                    <th>Trạng thái</th>
                    <th class="text-center" style="width:160px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model == null || !Model.Any())
                {
                    <tr>
                        <td colspan="6" class="text-center py-4 text-muted">Không tìm thấy đơn hàng nào.</td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        string badgeClass = "bg-secondary";
                        if (item.TRANGTHAI == "HOÀN THÀNH") { badgeClass = "bg-success"; }
                        else if (item.TRANGTHAI == "CHỜ XỬ LÝ") { badgeClass = "bg-warning text-dark"; }
                        else if (item.TRANGTHAI == "ĐÃ GIAO") { badgeClass = "bg-info text-dark"; }
                        else if (item.TRANGTHAI == "ĐÃ HỦY") { badgeClass = "bg-danger"; }

                        <tr>
                            <td class="align-middle fw-bold text-primary">@item.MAHOADON</td>
                            <td class="align-middle">
                                @if (item.KHACHHANG != null)
                                {
                                    <div>@item.KHACHHANG.HOTEN</div>
                                    <small class="text-muted">@item.KHACHHANG.SODIENTHOAI</small>
                                }
                                else
                                {
                                    <span class="text-muted">Khách vãng lai</span>
                                }
                            </td>
                            <td class="align-middle">@item.NGAYLAP.Value.ToString("dd/MM/yyyy HH:mm")</td>
                            <td class="align-middle fw-bold text-success">@string.Format("{0:N0}", item.TONGTIEN) đ</td>
                            <td class="align-middle">
                                <span class="badge @badgeClass">@item.TRANGTHAI</span>
                            </td>
                            <td class="align-middle text-center">
                                <a href="@Url.Action("Details", new { id = item.MAHOADON.Trim() })" 
                                   class="btn btn-sm btn-info text-white me-1" title="Chi tiết">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a href="@Url.Action("Edit", new { id = item.MAHOADON.Trim() })" 
                                   class="btn btn-sm btn-warning me-1" title="Sửa">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a href="@Url.Action("Delete", new { id = item.MAHOADON.Trim() })" 
                                   class="btn btn-sm btn-danger" title="Xóa">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    @if (totalPages > 1)
    {
        <div class="d-flex justify-content-center mt-3">
            <nav>
                <ul class="pagination">
                    <li class="page-item @(page <= 1 ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { q = query, status = currentStatus, page = page - 1 })">Previous</a>
                    </li>
                    @for (int i = 1; i <= totalPages; i++)
                    {
                        <li class="page-item @(i == page ? "active" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { q = query, status = currentStatus, page = i })">@i</a>
                        </li>
                    }
                    <li class="page-item @(page >= totalPages ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { q = query, status = currentStatus, page = page + 1 })">Next</a>
                    </li>
                </ul>
            </nav>
        </div>
    }

</div>
