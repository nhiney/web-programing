@model WebBanGIay.Models.HOADON
@{
    ViewBag.Title = "Chi tiết đơn hàng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container py-4" style="color:#d8e5f7;">
    
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <div class="card bg-dark border-secondary shadow mb-3">
        <div class="card-header bg-info text-dark">
            <h4><i class="bi bi-receipt"></i> Chi tiết đơn hàng: @Model.MAHOADON</h4>
        </div>
        <div class="card-body">
            <table class="table table-dark">
                <tr>
                    <th>Mã đơn:</th>
                    <td>@Model.MAHOADON</td>
                </tr>
                <tr>
                    <th>Ngày lập:</th>
                    <td>@Model.NGAYLAP?.ToString("dd/MM/yyyy HH:mm")</td>
                </tr>
                <tr>
                    <th>Khách hàng:</th>
                    <td>@(Model.KHACHHANG?.HOTEN ?? "Khách vãng lai")</td>
                </tr>
                <tr>
                    <th>Tổng tiền:</th>
                    <td class="text-success fw-bold">@string.Format("{0:N0}", Model.TONGTIEN) đ</td>
                </tr>
                <tr>
                    <th>Trạng thái:</th>
                    <td>
                        @{
                            var badgeClass = "bg-secondary";
                            if (Model.TRANGTHAI == "HOÀN THÀNH") { 
                                badgeClass = "bg-success"; 
                            }
                            else if (Model.TRANGTHAI == "CHỜ XỬ LÝ") { 
                                badgeClass = "bg-warning text-dark"; 
                            }
                            else if (Model.TRANGTHAI == "ĐÃ GIAO") { 
                                badgeClass = "bg-info"; 
                            }
                            else if (Model.TRANGTHAI == "ĐÃ HỦY") { 
                                badgeClass = "bg-danger"; 
                            }
                        }
                        <span class="badge @badgeClass">@Model.TRANGTHAI</span>
                    </td>
                </tr>
            </table>
        </div>
    </div>

    <div class="card bg-dark border-secondary shadow mb-3">
        <div class="card-header">
            <h5><i class="bi bi-cart"></i> Sản phẩm</h5>
        </div>
        <div class="card-body p-0">
            <table class="table table-dark mb-0">
                <thead>
                    <tr>
                        <th>Sản phẩm</th>
                        <th class="text-center">SL</th>
                        <th class="text-end">Đơn giá</th>
                        <th class="text-end">Thành tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.CHITIET_HOADON != null && Model.CHITIET_HOADON.Any())
                    {
                        foreach (var detail in Model.CHITIET_HOADON)
                        {
                            <tr>
                                <td>
                                    <strong>@(detail.SANPHAM?.TENSANPHAM ?? "N/A")</strong><br />
                                    <small class="text-muted">@detail.MASANPHAM</small>
                                </td>
                                <td class="text-center">@detail.SOLUONG</td>
                                <td class="text-end">@string.Format("{0:N0}", detail.DONGIA) đ</td>
                                <td class="text-end fw-bold">@string.Format("{0:N0}", detail.SOLUONG * detail.DONGIA) đ</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted">Không có sản phẩm</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="3" class="text-end fw-bold">TỔNG:</td>
                        <td class="text-end fw-bold text-success">@string.Format("{0:N0}", Model.TONGTIEN) đ</td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>

    <div class="d-flex gap-2">
        <a href="@Url.Action("Edit", new { id = Model.MAHOADON })" class="btn btn-warning">
            <i class="bi bi-pencil"></i> Cập nhật
        </a>
        <a href="@Url.Action("Delete", new { id = Model.MAHOADON })" class="btn btn-danger">
            <i class="bi bi-trash"></i> Xóa
        </a>
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Quay lại
        </a>
    </div>
</div>
