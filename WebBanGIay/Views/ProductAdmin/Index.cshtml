@model IEnumerable<WebBanGIay.Models.SANPHAM>
@{
    ViewBag.Title = "Product Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="text-primary"><i class="bi bi-box"></i> Product Management</h2>
    <a href="@Url.Action("Create", "ProductAdmin")" class="btn btn-primary">
        <i class="bi bi-plus"></i> Add New Product
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-circle me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Search Box -->
<div class="card shadow-sm mb-3">
    <div class="card-body">
        <form method="get" action="@Url.Action("Index", "ProductAdmin")" class="row g-2">
            <div class="col-md-4">
                <input type="text" name="q" class="form-control" placeholder="Search by name or ID..."
                        value="@ViewBag.Query" />
            </div>
            <div class="col-md-2">
                <button class="btn btn-primary w-100">
                    <i class="bi bi-search"></i> Search
                </button>
            </div>
            <div class="col-md-2">
                <a href="@Url.Action("Index", "ProductAdmin")" class="btn btn-secondary w-100">
                    <i class="bi bi-x-circle"></i> Reset
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Product Table -->
<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table table-hover table-bordered mb-0">
            <thead class="table-primary">
                <tr>
                    <th style="width: 110px;">Image</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Stock</th>
                    <th style="width: 160px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr class="text-center text-muted">
                        <td colspan="5">No products found.</td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">
                                @{
                                    var imgPath = "/source/images/shoes.png"; // Default
                                    if (!string.IsNullOrEmpty(item.HINHANH))
                                    {
                                        // Handle different database formats
                                        if (item.HINHANH.StartsWith("/"))
                                        {
                                            imgPath = item.HINHANH; // Full path like /source/images/Products/abc.jpg
                                        }
                                        else if (item.HINHANH.StartsWith("source/"))
                                        {
                                            imgPath = "/" + item.HINHANH; // Add leading slash
                                        }
                                        else
                                        {
                                            imgPath = "/source/images/Products/" + item.HINHANH; // Just filename
                                        }
                                    }
                                }
                                <img src="@imgPath" 
                                     class="img-thumbnail" 
                                     style="width:80px;height:80px;object-fit:cover;" 
                                     onerror="this.onerror=null; this.src='/source/images/shoes.png';" 
                                     alt="@item.TENSANPHAM" 
                                     title="DB Value: '@item.HINHANH'" />
                            </td>
                            <td>
                                <strong>@item.TENSANPHAM</strong><br />
                                <small class="text-muted">ID: @item.MASANPHAM.Trim()</small>
                            </td>
                            <td class="text-danger fw-bold">
                                @String.Format("{0:N0}₫", item.GIA)
                            </td>
                            <td>
                                @if (item.SOLUONGTON <= 0)
                                {
                                    <span class="badge bg-danger">Out of stock</span>
                                }
                                else if (item.SOLUONGTON < 10)
                                {
                                    <span class="badge bg-warning text-dark">Low: @item.SOLUONGTON</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">@item.SOLUONGTON</span>
                                }
                            </td>
                            <td class="text-center">
                                <a href="@Url.Action("Edit", "ProductAdmin", new { id = item.MASANPHAM.Trim() })"
                                   class="btn btn-sm btn-warning me-1" title="Edit">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a href="@Url.Action("Details", "ProductAdmin", new { id = item.MASANPHAM.Trim() })"
                                   class="btn btn-sm btn-info text-white me-1" title="Details">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a href="@Url.Action("Delete", "ProductAdmin", new { id = item.MASANPHAM.Trim() })"
                                   class="btn btn-sm btn-danger"
                                   onclick="return confirm('Delete this product?');" title="Delete">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Paging -->
@if (ViewBag.TotalPages > 1)
{
    <nav class="mt-3">
        <ul class="pagination justify-content-center">
            <li class="page-item @(ViewBag.Page == 1 ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", "ProductAdmin", new { q = ViewBag.Query, page = ViewBag.Page - 1 })">Prev</a>
            </li>
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.Page ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", "ProductAdmin", new { q = ViewBag.Query, page = i })">@i</a>
                </li>
            }
            <li class="page-item @(ViewBag.Page == ViewBag.TotalPages ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", "ProductAdmin", new { q = ViewBag.Query, page = ViewBag.Page + 1 })">Next</a>
            </li>
        </ul>
    </nav>
}
