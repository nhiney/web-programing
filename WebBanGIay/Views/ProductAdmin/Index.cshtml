@model IEnumerable<WebBanGIay.Models.SANPHAM>
@{
    ViewBag.Title = "Product Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="text-primary"><i class="fa fa-box"></i> Product Management</h2>
    <a href="@Url.Action("Create", "ProductAdmin")" class="btn btn-primary">
        <i class="fa fa-plus"></i> Add New Product
    </a>

</div>

<!-- Search Box -->
<div class="card shadow-sm mb-3">
    <div class="card-body">
        <form method="get" action="@Url.Action("Index", "Products", new { area = "Admin" })" class="row g-2">
            <div class="col-md-4">
                <input type="text" name="q" class="form-control" placeholder="Search by name or ID..."
                       value="@ViewBag.Query" />
            </div>
            <div class="col-md-2">
                <button class="btn btn-primary w-100">
                    <i class="fa fa-search"></i> Search
                </button>
            </div>
            <div class="col-md-2">
                <a href="@Url.Action("Index", "Products", new { area = "Admin" })" class="btn btn-secondary w-100">
                    <i class="fa fa-times"></i> Reset
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Product Table -->
<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table table-hover table-bordered mb-0">
            <thead class="table-primary">
                <tr>
                    <th style="width: 110px;">Image</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Stock</th>
                    <th style="width: 160px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr class="text-center text-muted">
                        <td colspan="5">No products found.</td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">
                                <img src="@item.HINHANH" class="img-thumbnail" style="width:80px;height:80px;object-fit:cover;" />
                            </td>
                            <td>
                                <strong>@item.TENSANPHAM</strong><br />
                                <small class="text-muted">ID: @item.MASANPHAM</small>
                            </td>
                            <td class="text-danger fw-bold">
                                @String.Format("{0:N0}₫", item.GIA)
                            </td>
                            <td>
                                @if (item.SOLUONGTON <= 0)
                                {
                                    <span class="badge bg-danger">Out of stock</span>
                                }
                                else if (item.SOLUONGTON < 10)
                                {
                                    <span class="badge bg-warning text-dark">Low: @item.SOLUONGTON</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">@item.SOLUONGTON</span>
                                }
                            </td>
                            <td class="text-center">
                                <a href="@Url.Action("Edit", "Products", new { area = "Admin", id = item.MASANPHAM })"
                                   class="btn btn-sm btn-warning me-1">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a href="@Url.Action("Details", "Products", new { area = "Admin", id = item.MASANPHAM })"
                                   class="btn btn-sm btn-info text-white me-1">
                                    <i class="fa fa-eye"></i>
                                </a>
                                <a href="@Url.Action("Delete", "Products", new { area = "Admin", id = item.MASANPHAM })"
                                   class="btn btn-sm btn-danger"
                                   onclick="return confirm('Delete this product?');">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Paging -->
@if (ViewBag.TotalPages > 1)
{
    <nav class="mt-3">
        <ul class="pagination justify-content-center">
            <li class="page-item @(ViewBag.Page == 1 ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", "Products", new { area = "Admin", q = ViewBag.Query, page = ViewBag.Page - 1 })">Prev</a>
            </li>
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.Page ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", "Products", new { area = "Admin", q = ViewBag.Query, page = i })">@i</a>
                </li>
            }
            <li class="page-item @(ViewBag.Page == ViewBag.TotalPages ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", "Products", new { area = "Admin", q = ViewBag.Query, page = ViewBag.Page + 1 })">Next</a>
            </li>
        </ul>
    </nav>
}
