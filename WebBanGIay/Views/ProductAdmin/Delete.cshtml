@model WebBanGIay.Models.SANPHAM
@{
    ViewBag.Title = "Xóa sản phẩm";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container py-4" style="color:#d8e5f7; max-width: 500px;">
    <div class="card bg-dark border-danger shadow">
        <div class="card-header border-danger bg-danger text-white">
            <h4 class="mb-0 fw-bold"><i class="bi bi-trash"></i> Xác nhận xóa sản phẩm</h4>
        </div>
        <div class="card-body text-center">
            @if (!string.IsNullOrEmpty(Model.HINHANH))
            {
                <img src="@Model.HINHANH" class="img-fluid rounded mb-3" style="max-height:120px;" />
            }

            <h5 class="fw-bold">@Model.TENSANPHAM</h5>
            <p class="text-muted">Mã: @Model.MASANPHAM</p>
            <p class="text-success fw-bold">@string.Format("{0:N0}", Model.GIA) đ</p>

            <div class="alert alert-warning mt-3">
                <i class="bi bi-exclamation-triangle"></i> Bạn có chắc chắn muốn xóa sản phẩm này không?
            </div>

            <form method="post" action="@Url.Action("Delete", new { id = Model.MASANPHAM })">
                @Html.AntiForgeryToken()
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-danger fw-bold py-2">
                        <i class="bi bi-trash"></i> Xác nhận xóa
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">Hủy bỏ</a>
                </div>
            </form>
        </div>
    </div>
</div>
