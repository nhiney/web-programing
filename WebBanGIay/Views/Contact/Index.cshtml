@model WebBanGIay.Models.LIENHE
@{
    ViewBag.Title = "Liên hệ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .contact-container {
        padding: 60px 0;
        max-width: 800px;
        margin: 0 auto;
    }
    .contact-header {
        text-align: center;
        margin-bottom: 40px;
    }
    .contact-header h2 {
        font-weight: 700;
        color: #2c3e50;
    }
    .contact-form {
        background: #fff;
        padding: 40px;
        border-radius: 15px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.05);
    }
    .form-control {
        padding: 12px;
        border-radius: 8px;
        border: 1px solid #ddd;
    }
    .btn-send {
        background: #000;
        color: #fff;
        padding: 12px 30px;
        border-radius: 8px;
        border: none;
        font-weight: 600;
        transition: 0.3s;
    }
    .btn-send:hover {
        background: #333;
        color: #fff;
    }
</style>

<div class="container contact-container">
    <div class="contact-header">
        <h2>Liên Hệ Với Chúng Tôi</h2>
        <p class="text-muted">Chúng tôi luôn lắng nghe ý kiến của bạn. Hãy để lại tin nhắn!</p>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">
            <i class="bi bi-check-circle-fill"></i> @TempData["Success"]
        </div>
    }

    <div class="contact-form">
        @using (Html.BeginForm("Send", "Contact", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Họ và tên <span class="text-danger">*</span></label>
                    @Html.TextBoxFor(m => m.HoTen, new { @class = "form-control", placeholder = "Nhập họ tên...", required = "required" })
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Số điện thoại</label>
                    @Html.TextBoxFor(m => m.SDT, new { @class = "form-control", placeholder = "Nhập SĐT..." })
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Email <span class="text-danger">*</span></label>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email", placeholder = "Nhập email...", required = "required" })
            </div>

            <div class="mb-4">
                <label class="form-label">Nội dung tin nhắn <span class="text-danger">*</span></label>
                @Html.TextAreaFor(m => m.NoiDung, new { @class = "form-control", rows = "5", placeholder = "Bạn cần hỗ trợ gì?", required = "required" })
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-send">
                    <i class="bi bi-send-fill me-2"></i>Gửi Tin Nhắn
                </button>
            </div>
        }

        <!-- Message History Section -->
        <div class="mt-5" id="historySection" style="display:none; border-top: 1px solid #eee; padding-top: 30px;">
            <h3 class="text-center mb-4" style="font-size: 1.3rem; font-weight: 600; color: #2c3e50;">
                <i class="bi bi-clock-history me-2"></i>Lịch sử tin nhắn
            </h3>
            <div id="messageList">
                <!-- Messages loaded here -->
            </div>
        </div>
    </div>

</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        loadMessageHistory();
    });

    function loadMessageHistory() {
        fetch('/Contact/GetHistory')
            .then(response => response.json())
            .then(data => {
                if (data.success && data.data.length > 0) {
                    document.getElementById('historySection').style.display = 'block';
                    const listContainer = document.getElementById('messageList');
                    listContainer.innerHTML = '';

                    data.data.forEach(msg => {
                        let replyHtml = '';
                        if (msg.PhanHoi) {
                            replyHtml = `
                                <div class="mt-3 p-3 bg-light rounded border-start border-4 border-primary">
                                    <div class="d-flex align-items-center mb-2">
                                        <i class="bi bi-person-badge-fill text-primary me-2"></i>
                                        <strong class="text-primary">Admin phản hồi:</strong>
                                        <small class="text-muted ms-auto">
                                            ${msg.NgayPhanHoi ? new Date(parseInt(msg.NgayPhanHoi.replace(/\/Date\((-?\d+)\)\//, '$1'))).toLocaleString() : ''}
                                        </small>
                                    </div>
                                    <p class="mb-0 text-dark">${msg.PhanHoi}</p>
                                </div>
                            `;
                        } else {
                            replyHtml = `<div class="mt-2 text-muted fst-italic"><small>Chưa có phản hồi</small></div>`;
                        }

                        // Try to parse NgayGui if possible, else just use raw string or simple format
                         let dateDisplay = msg.NgayGui;
                         if(msg.NgayGui.startsWith("/Date")) {
                              dateDisplay = new Date(parseInt(msg.NgayGui.replace(/\/Date\((-?\d+)\)\//, '$1'))).toLocaleString();
                         }

                        const card = `
                            <div class="card mb-3 shadow-sm">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between text-muted small mb-2">
                                        <span><i class="bi bi-clock"></i> ${dateDisplay}</span>
                                        <span class="badge bg-${msg.PhanHoi ? 'success' : 'secondary'}">${msg.PhanHoi ? 'Đã phản hồi' : 'Đang chờ'}</span>
                                    </div>
                                    <p class="card-text fw-bold text-dark mb-1">Q: ${msg.NoiDung}</p>
                                    ${replyHtml}
                                </div>
                            </div>
                        `;
                        listContainer.innerHTML += card;
                    });
                }
            })
            .catch(error => console.error('Error loading history:', error));
    }
</script>
