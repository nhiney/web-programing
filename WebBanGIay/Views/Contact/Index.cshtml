@model WebBanGIay.Models.LIENHE
@{
    ViewBag.Title = "Liên hệ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .contact-container {
        padding: 60px 0;
        max-width: 800px;
        margin: 0 auto;
    }
    .contact-header {
        text-align: center;
        margin-bottom: 40px;
    }
    .contact-header h2 {
        font-weight: 700;
        color: #2c3e50;
    }
    .contact-form {
        background: #fff;
        padding: 40px;
        border-radius: 15px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.05);
    }
    .form-control {
        padding: 12px;
        border-radius: 8px;
        border: 1px solid #ddd;
    }
    .btn-send {
        background: #000;
        color: #fff;
        padding: 12px 30px;
        border-radius: 8px;
        border: none;
        font-weight: 600;
        transition: 0.3s;
    }
    .btn-send:hover {
        background: #333;
        color: #fff;
    }
</style>

<div class="container contact-container">
    <div class="contact-header">
        <h2>Liên Hệ Với Chúng Tôi</h2>
        <p class="text-muted">Chúng tôi luôn lắng nghe ý kiến của bạn. Hãy để lại tin nhắn!</p>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">
            <i class="bi bi-check-circle-fill"></i> @TempData["Success"]
        </div>
    }

    <div class="contact-form">
        @using (Html.BeginForm("Send", "Contact", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Họ và tên <span class="text-danger">*</span></label>
                    @Html.TextBoxFor(m => m.HoTen, new { @class = "form-control", placeholder = "Nhập họ tên...", required = "required" })
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Số điện thoại</label>
                    @Html.TextBoxFor(m => m.SDT, new { @class = "form-control", placeholder = "Nhập SĐT..." })
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Email <span class="text-danger">*</span></label>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email", placeholder = "Nhập email...", required = "required" })
            </div>

            <div class="mb-4">
                <label class="form-label">Nội dung tin nhắn <span class="text-danger">*</span></label>
                @Html.TextAreaFor(m => m.NoiDung, new { @class = "form-control", rows = "5", placeholder = "Bạn cần hỗ trợ gì?", required = "required" })
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-send">
                    <i class="bi bi-send-fill me-2"></i>Gửi Tin Nhắn
                </button>
            </div>
        }
    </div>
</div>
