@model WebBanGIay.Models.SANPHAM
@{
    Layout = null;
    var listLienQuan = ViewBag.SanPhamLienQuan as List<WebBanGIay.Models.SANPHAM>;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.TENSANPHAM - Shop Giày Đẹp</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <style>
        :root {
            --main: #ee4d2d;
            --main-hover: #d83a1f;
        }

        body {
            background: #fafafa;
            font-family: 'Segoe UI',sans-serif;
            color: #333;
        }

        .back-btn {
            color: #555;
            text-decoration: none;
            font-size: 15px;
            margin-bottom: 1rem;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

            .back-btn:hover {
                color: var(--main);
            }

        .main-img-container {
            position: relative;
            border-radius: 16px;
            overflow: hidden;
            background: white;
            box-shadow: 0 8px 30px rgba(0,0,0,0.12);
        }

        .main-img {
            transition: transform 0.5s;
        }

            .main-img:hover {
                transform: scale(1.05);
            }

        .product-name {
            font-size: 2rem;
            font-weight: 600;
            margin: 0 0 8px;
            color: #000;
        }

        .brand {
            color: var(--main);
            font-weight: 500;
            margin-bottom: 12px;
        }

        .status {
            display: flex;
            gap: 20px;
            margin: 15px 0;
            font-size: 14px;
            color: #27ae60;
        }

        .price-box {
            background: #fafafa;
            padding: 15px;
            border-radius: 12px;
            margin: 20px 0;
        }

        .old-price {
            font-size: 1.1rem;
            text-decoration: line-through;
            color: #999;
        }

        .new-price {
            font-size: 2.2rem;
            font-weight: 700;
            color: var(--main);
            margin: 0 10px;
        }

        .save-badge {
            background: var(--main);
            color: white;
            padding: 5px 12px;
            border-radius: 30px;
            font-size: 0.9rem;
        }

        .size-label {
            font-weight: 600;
            margin-bottom: 12px;
        }

        .size-grid {
            display: grid;
            grid-template-columns: repeat(4,1fr);
            gap: 12px;
        }

        .size-item {
            height: 50px;
            border: 2px solid #ddd;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s;
            font-weight: 600;
        }

            .size-item:hover, .size-item.active {
                border-color: var(--main);
                background: var(--main);
                color: white;
                transform: scale(1.08);
            }

        .qty-box {
            display: flex;
            align-items: center;
            gap: 15px;
            margin: 25px 0;
        }

        .qty-btn {
            width: 44px;
            height: 44px;
            border: 2px solid #ddd;
            background: white;
            border-radius: 50%;
            font-size: 18px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: 0.3s;
        }

            .qty-btn:hover {
                background: var(--main);
                color: white;
                border-color: var(--main);
            }

        .qty-input {
            width: 80px;
            height: 44px;
            text-align: center;
            border: 2px solid #ddd;
            border-radius: 12px;
            font-size: 18px;
            font-weight: bold;
        }

        .action-buttons {
            margin-top: 30px;
            display: flex;
            gap: 15px;
            flex-wrap: wrap;
        }

        .btn-cart {
            flex: 1;
            background: white;
            color: var(--main);
            border: 2px solid var(--main);
            padding: 16px;
            border-radius: 12px;
            font-size: 1.1rem;
            font-weight: 600;
            min-height: 60px;
            transition: 0.4s;
        }

            .btn-cart:hover {
                background: var(--main);
                color: white;
            }

        .btn-buy {
            flex: 1;
            background: var(--main);
            color: white;
            border: none;
            padding: 16px;
            border-radius: 12px;
            font-size: 1.1rem;
            font-weight: 600;
            min-height: 60px;
        }

            .btn-buy:hover {
                background: var(--main-hover);
                transform: translateY(-3px);
                box-shadow: 0 10px 25px rgba(238,77,45,0.3);
            }

        .related-product {
            background: white;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 5px 20px rgba(0,0,0,0.08);
            transition: 0.4s;
        }

            .related-product:hover {
                transform: translateY(-10px);
                box-shadow: 0 20px 40px rgba(0,0,0,0.15);
            }

        .discount-tag {
            position: absolute;
            top: 12px;
            left: 12px;
            background: var(--main);
            color: white;
            font-size: 13px;
            font-weight: bold;
            padding: 4px 10px;
            border-radius: 8px;
            z-index: 2;
        }
    </style>
</head>
<body>
    <div class="container py-4 py-md-5">
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i> @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
                <i class="fas fa-check-circle me-2"></i> @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <a href="@Url.Action("Index", "TrangChu")" class="back-btn">
            <i class="fas fa-arrow-left me-2"></i> Tiếp tục mua sắm
        </a>

        <div class="row g-4 g-xl-5">
            <!-- Ảnh sản phẩm -->
            <div class="col-lg-5">
                <div class="main-img-container">
                    <img src="@(string.IsNullOrWhiteSpace(Model.HINHANH) ? "/source/images/products/no-image.jpg" : "/source/images/products/" + Model.HINHANH)"
                         alt="@Model.TENSANPHAM" class="img-fluid w-100 main-img">
                </div>
            </div>

            <!-- Thông tin sản phẩm -->
            <div class="col-lg-7">
                <h1 class="product-name">@Model.TENSANPHAM</h1>
                <div class="brand">Thương hiệu: <strong>@Model.NHACUNGCAP.TENNHACUNGCAP</strong></div>
                <div class="status">
                    <span>Còn hàng</span>
                    <span>Miễn phí vận chuyển</span>
                </div>

                <div class="price-box d-flex align-items-center flex-wrap gap-3">
                    @if (Model.GIAKHUYENMAI > 0 && Model.GIAKHUYENMAI < Model.GIA)
                    {
                        <div class="old-price">@String.Format("{0:N0}", Model.GIA)₫</div>
                        <div class="new-price">@String.Format("{0:N0}", Model.GIAKHUYENMAI)₫</div>
                        <div class="save-badge">Tiết kiệm @String.Format("{0:N0}", Model.GIA - Model.GIAKHUYENMAI)₫</div>
                    }
                    else
                    {
                        <div class="new-price">@String.Format("{0:N0}", Model.GIA)₫</div>
                    }
                </div>

                <!-- CHỌN SIZE -->
                <div class="size-label">Chọn kích thước:</div>
                <div class="size-grid mb-4">
                    @{ int[] sizes = { 36, 37, 38, 39, 40, 41, 42, 43 }; }
                    @foreach (var s in sizes)
                    {
                        <div class="size-item" data-size="@s">@s</div>
                    }
                </div>

                <!-- SỐ LƯỢNG -->
                <div class="qty-box">
                    <div class="qty-label fw-bold">Số lượng:</div>
                    <button type="button" class="qty-btn minus"><i class="fas fa-minus"></i></button>
                    <input type="text" class="qty-input" value="1" readonly>
                    <button type="button" class="qty-btn plus"><i class="fas fa-plus"></i></button>
                </div>

                <!-- FORM THÊM GIỎ HÀNG (ĐÃ SỬA HOÀN CHỈNH) -->
                <div class="action-buttons">
                    <!-- Nút THÊM VÀO GIỎ HÀNG (ở lại trang chi tiết) -->
                    <form action="@Url.Action("Add", "Cart")" method="post" style="flex:1">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.MASANPHAM" />
                        <input type="hidden" name="soLuong" id="soLuongHidden" value="1" />
                        <input type="hidden" name="sizeId" id="selectedSize" value="" />
                        <button type="submit" class="btn-cart">
                            Thêm vào giỏ hàng
                        </button>
                    </form>

                    <!-- Nút MUA NGAY → thêm + đi thẳng vào giỏ hàng -->
                    <form action="@Url.Action("AddAndCheckout", "Cart")" method="post" style="flex:1">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.MASANPHAM" />
                        <input type="hidden" name="soLuong" id="soLuongBuyNow" value="1" />
                        <input type="hidden" name="sizeId" id="sizeBuyNow" value="" />
                        <button type="submit" class="btn-buy">
                            Mua ngay
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Sản phẩm liên quan (giữ nguyên) -->
        @if (listLienQuan != null && listLienQuan.Any())
        {
            <div class="mt-5">
                <h3 class="mb-4 fw-bold">Sản phẩm liên quan</h3>
                <div class="row g-4">
                    @foreach (var sp in listLienQuan.Take(8))
                    {
                        var giam = sp.GIAKHUYENMAI > 0 && sp.GIAKHUYENMAI < sp.GIA
                            ? Math.Round((double)((sp.GIA - sp.GIAKHUYENMAI) / sp.GIA * 100)) : 0;
                        <div class="col-6 col-md-4 col-lg-3">
                            <div class="related-product position-relative">
                                @if (giam > 0)
                                {
                                    <div class="discount-tag">@("-" + giam + "%")</div>
                                }
                                <a href="/Products/ChiTiet/@sp.MASANPHAM">
                                    <img src="@(string.IsNullOrWhiteSpace(sp.HINHANH) ? "/source/images/products/no-image.jpg" : "/source/images/products/" + sp.HINHANH)"
                                         class="img-fluid" style="height:220px; object-fit:cover;">
                                </a>
                                <div class="p-3">
                                    <h6 class="mb-2" style="height:48px; overflow:hidden; display:-webkit-box; -webkit-line-clamp:2; -webkit-box-orient:vertical;">
                                        @sp.TENSANPHAM
                                    </h6>
                                    <div class="d-flex align-items-center gap-2 mb-2">
                                        @if (giam > 0)
                                        {
                                            <small class="text-muted text-decoration-line-through">@String.Format("{0:N0}", sp.GIA)₫</small>
                                            <strong class="text-danger">@String.Format("{0:N0}", sp.GIAKHUYENMAI)₫</strong>
                                        }
                                        else
                                        {
                                            <strong class="text-danger">@String.Format("{0:N0}", sp.GIA)₫</strong>
                                        }
                                    </div>
                                    <a href="/Products/ChiTiet/@sp.MASANPHAM" class="btn btn-sm btn-outline-danger w-100 rounded-pill">
                                        Xem chi tiết
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // ==== CHỌN SIZE (cập nhật cho cả 2 form) ====
        document.querySelectorAll('.size-item').forEach(item => {
            item.addEventListener('click', function () {
                // Bỏ active cũ, thêm active mới
                document.querySelectorAll('.size-item').forEach(e => e.classList.remove('active'));
                this.classList.add('active');

                const size = this.getAttribute('data-size');

                // Cập nhật cho form "Thêm vào giỏ hàng"
                document.getElementById('selectedSize').value = size;

                // Cập nhật cho form "Mua ngay"
                document.getElementById('sizeBuyNow').value = size;
            });
        });

        // ==== SỐ LƯỢNG (đồng bộ cho cả 2 form) ====
        const qtyInput = document.querySelector('.qty-input');

        const updateQuantity = () => {
            const val = qtyInput.value;
            document.getElementById('soLuongHidden').value = val;   // cho nút Thêm
            document.getElementById('soLuongBuyNow').value = val;   // cho nút Mua ngay
        };

        document.querySelector('.plus').addEventListener('click', () => {
            qtyInput.value = parseInt(qtyInput.value) + 1;
            updateQuantity();
        });

        document.querySelector('.minus').addEventListener('click', () => {
            if (parseInt(qtyInput.value) > 1) {
                qtyInput.value = parseInt(qtyInput.value) - 1;
                updateQuantity();
            }
        });

        // Cập nhật số lượng lần đầu khi trang load (phòng trường hợp có giá trị mặc định)
        updateQuantity();
    </script>
</body>
</html>