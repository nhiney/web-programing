    <script>
        // Initialize AOS
        AOS.init({
            duration: 800,
            once: true
        });

        // Preloader
        window.addEventListener('load', function () {
            setTimeout(function () {
                document.querySelector('.preloader').classList.add('fade-out');
            }, 1000);
        });

        // Mobile Menu
        const mobileMenuToggle = document.getElementById('mobileMenuToggle');
        const mobileMenu = document.getElementById('mobileMenu');
        const mobileMenuClose = document.getElementById('mobileMenuClose');

        mobileMenuToggle.addEventListener('click', function () {
            mobileMenu.classList.add('active');
        });

        mobileMenuClose.addEventListener('click', function () {
            mobileMenu.classList.remove('active');
        });

        // Header scroll effect
        window.addEventListener('scroll', function () {
            const header = document.querySelector('header');
            if (window.scrollY > 50) {
                header.classList.add('scrolled');
            } else {
                header.classList.remove('scrolled');
            }
        });

        // Back to top button
        const backToTop = document.getElementById('backToTop');

        window.addEventListener('scroll', function () {
            if (window.scrollY > 300) {
                backToTop.classList.add('active');
            } else {
                backToTop.classList.remove('active');
            }
        });

        backToTop.addEventListener('click', function () {
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        });

        // Search functionality
        document.querySelectorAll('.search-input').forEach(input => {
            input.addEventListener('keypress', function (e) {
                if (e.key === 'Enter') {
                    const searchTerm = this.value.trim();
                    if (searchTerm) {
                        window.location.href = `/Search?q=${encodeURIComponent(searchTerm)}`;
                    }
                }
            });
        });

        document.querySelectorAll('.search-btn').forEach(btn => {
            btn.addEventListener('click', function () {
                const input = this.previousElementSibling;
                const searchTerm = input.value.trim();
                if (searchTerm) {
                    window.location.href = `/Search?q=${encodeURIComponent(searchTerm)}`;
                }
            });
        });
    </script>

    @RenderSection("scripts", required: false)

    <!-- CHAT SUPPORT MODAL & FAB -->
    @if (Session["UserName"] != null)
    {
        <!-- Floating Button -->
        <button id="chatFab" class="btn btn-primary rounded-circle shadow-lg d-flex align-items-center justify-content-center" 
                style="position: fixed; bottom: 30px; right: 30px; width: 65px; height: 65px; z-index: 9999; animation: pulse 2s infinite;">
            <i class="fas fa-robot fs-2"></i>
        </button>
        <style>
            @@keyframes pulse {
                0% { box-shadow: 0 0 0 0 rgba(13, 110, 253, 0.7); }
                70% { box-shadow: 0 0 0 15px rgba(13, 110, 253, 0); }
                100% { box-shadow: 0 0 0 0 rgba(13, 110, 253, 0); }
            }
        </style>

        <!-- Modal -->
        <div class="modal fade" id="chatModal" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content border-0 shadow-lg">
                    <div class="modal-header bg-primary text-white">
                        <h5 class="modal-title"><i class="fas fa-headset me-2"></i>Hỗ trợ trực tuyến</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body p-4">
                        <div id="chatSuccess" class="alert alert-success d-none">
                            <i class="fas fa-check-circle me-1"></i> Gửi tin nhắn thành công! Admin sẽ phản hồi sớm.
                        </div>
                        <form id="chatForm">
                            <div class="mb-3">
                                <label class="form-label fw-bold small text-uppercase text-muted">Họ tên</label>
                                <input type="text" name="HoTen" class="form-control" value="@Session["UserName"]" readonly>
                            </div>
                            
                            <!-- Chat History Container -->
                            <div id="chatHistory" class="chat-history">
                                <!-- Messages will be loaded here via JS -->
                            </div>
                            <!-- Email removed as requested -->
                            <div class="mb-3">
                                <label class="form-label fw-bold small text-uppercase text-muted">Nội dung / Câu hỏi</label>
                                <textarea name="NoiDung" id="chatContent" class="form-control" rows="4" placeholder="Bạn cần hỗ trợ gì không?" required></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary w-100 py-2 fw-bold">
                                <i class="fas fa-paper-plane me-2"></i> Gửi tin nhắn
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <style>
            .chat-history {
                max-height: 300px;
                overflow-y: auto;
                margin-bottom: 15px;
                padding: 10px;
                background: #f8f9fa;
                border-radius: 8px;
                border: 1px solid #e9ecef;
            }
            .chat-msg {
                margin-bottom: 15px;
            }
            .chat-msg.user {
                text-align: right;
            }
            .chat-bubble {
                display: inline-block;
                padding: 8px 12px;
                border-radius: 12px;
                max-width: 80%;
                word-wrap: break-word;
            }
            .chat-msg.user .chat-bubble {
                background: #007bff;
                color: #fff;
                border-bottom-right-radius: 2px;
            }
            .chat-msg.admin .chat-bubble {
                background: #e9ecef;
                color: #333;
                border-bottom-left-radius: 2px;
                text-align: left;
            }
            .chat-time {
                display: block;
                font-size: 0.75rem;
                color: #999;
                margin-top: 4px;
            }
        </style>

        <!-- Script for Chat Functionality -->
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                const fab = document.getElementById("chatFab");
                const modalEl = document.getElementById("chatModal");
                const modal = new bootstrap.Modal(modalEl);
                const form = document.getElementById("chatForm");
                const contentInput = document.getElementById("chatContent");
                const historyContainer = document.getElementById("chatHistory"); // New Container

                // Load History Function
                function loadChatHistory() {
                    historyContainer.innerHTML = '<div class="text-center text-muted"><small>Đang tải tin nhắn...</small></div>';
                    
                    fetch('/Contact/GetHistory')
                        .then(r => r.json())
                        .then(data => {
                            historyContainer.innerHTML = '';
                            if (data.success && data.data && data.data.length > 0) {
                                // Reverse to show oldest first at top, newest at bottom (chat style)
                                const messages = data.data.slice().reverse(); 
                                
                                messages.forEach(msg => {
                                    // 1. User Message
                                    let dateDisplay = msg.NgayGui;
                                    if(msg.NgayGui.startsWith("/Date")) {
                                        dateDisplay = new Date(parseInt(msg.NgayGui.replace(/\/Date\((-?\d+)\)\//, '$1'))).toLocaleString();
                                    }

                                    const userHtml = `
                                        <div class="chat-msg user">
                                            <div class="chat-bubble">
                                                ${msg.NoiDung}
                                            </div>
                                            <small class="chat-time">${dateDisplay}</small>
                                        </div>
                                    `;
                                    historyContainer.innerHTML += userHtml;

                                    // 2. Admin Reply (if any)
                                    if (msg.PhanHoi) {
                                         let replyDate = '';
                                         if(msg.NgayPhanHoi && msg.NgayPhanHoi.startsWith("/Date")) {
                                            replyDate = new Date(parseInt(msg.NgayPhanHoi.replace(/\/Date\((-?\d+)\)\//, '$1'))).toLocaleString();
                                         }
                                        const adminHtml = `
                                            <div class="chat-msg admin">
                                                <div class="chat-bubble">
                                                    <div class="fw-bold small text-primary mb-1"><i class="fas fa-headset me-1"></i>Admin Support</div>
                                                    ${msg.PhanHoi}
                                                </div>
                                                <small class="chat-time">${replyDate}</small>
                                            </div>
                                        `;
                                        historyContainer.innerHTML += adminHtml;
                                    }
                                });

                                // Scroll to bottom
                                setTimeout(() => {
                                    historyContainer.scrollTop = historyContainer.scrollHeight;
                                }, 100);

                            } else {
                                historyContainer.innerHTML = '<div class="text-center text-muted py-3"><small>Chưa có tin nhắn nào. Hãy gửi câu hỏi cho chúng tôi!</small></div>';
                            }
                        })
                        .catch(err => {
                            console.error(err);
                            historyContainer.innerHTML = '<div class="text-danger small text-center">Không thể tải lịch sử chat</div>';
                        });
                }

                // Toggle Modal & Load History
                fab.addEventListener("click", () => {
                    modal.show();
                    loadChatHistory();
                });

                // Expose function to open chat with pre-filled content
                window.openChatWithContext = function (productName) {
                    contentInput.value = "Tôi muốn hỏi thêm thông tin về sản phẩm: " + productName + "\n---\n";
                    modal.show();
                    loadChatHistory(); // Also load history here
                };

                // AJAX Submit
                form.addEventListener("submit", function (e) {
                    e.preventDefault();
                    const btn = form.querySelector("button[type='submit']");
                    const originalText = btn.innerHTML;
                    
                    btn.disabled = true;
                    btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span> Đang gửi...';

                    const formData = new FormData(form);

                    fetch('@Url.Action("SendAjax", "Contact")', {
                        method: 'POST',
                        body: formData
                    })
                    .then(async r => {
                        if (!r.ok) {
                            const text = await r.text();
                            throw new Error("Server Error: " + r.status + " | " + text.substring(0, 100)); // Show preview of error
                        }
                        return r.json();
                    })
                    .then(data => {
                        btn.disabled = false;
                        btn.innerHTML = originalText;
                        if (data.success) {
                            // Clear input
                            contentInput.value = '';
                            
                            // Reload history to show new message (and maybe a temp "sent" status)
                            loadChatHistory();
                            
                            // Optional: Show success alert briefly
                            // document.getElementById("chatSuccess").classList.remove("d-none");
                            // setTimeout(() => {
                            //    document.getElementById("chatSuccess").classList.add("d-none");
                            // }, 2000);
                        } else {
                            alert(data.message || "Có lỗi xảy ra!");
                        }
                    })
                    .catch(err => {
                        btn.disabled = false;
                        btn.innerHTML = originalText;
                        console.error(err);
                        alert("Lỗi: " + err.message);
                    });
                });
            });
        </script>
    }
</body>
