    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- AOS Animation -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="@Url.Content("~/Content/Css/dinhdang.css")" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        @@keyframes pulse {
            0% {
                box-shadow: 0 4px 15px rgba(255, 59, 48, 0.4);
            }

            50% {
                box-shadow: 0 8px 30px rgba(255, 59, 48, 0.7);
            }

            100% {
                box-shadow: 0 4px 15px rgba(255, 59, 48, 0.4);
            }
        }
        @@media (max-width: 991px) {
            .navbar-nav {
                display: none;
            }

            .mobile-menu-toggle {
                display: block;
            }

            .search-container {
                display: none;
            }

            .user-dropdown {
                display: none;
            }

            .carousel-title {
                font-size: 2rem;
            }

            .carousel-text {
                font-size: 1rem;
            }
        }

        @@media (max-width: 767px) {
            .section-title {
                font-size: 2rem;
            }

            .product-section, .features-section, .payment-section {
                padding: 50px 0;
            }

            footer {
                padding: 50px 0 20px;
            }
        }
        @@keyframes slide {
            0% {
                transform: translateX(0);
            }

            100% {
                transform: translateX(-50%);
            }
        }
        @@keyframes spin {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }


    </style>
</head>
