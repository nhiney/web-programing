@{
    Layout = null;
    var adminName = Session["UserName"] as string ?? "Admin";
    var adminAvatar = Session["AdminAvatar"] as string ?? "/source/images/shoes.png";
    var newOrdersCount = ViewBag.NewOrdersCount ?? 0;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - ShoeStore Admin</title>

    <!-- Bootstrap 5 -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    
    <style>
        :root {
            /* DARK THEME (DEFAULT) */
            --bg-body: #0a0f18;
            --bg-sidebar: linear-gradient(180deg, #0c1624 0%, #0a1018 100%);
            --bg-topbar: #0c1624;
            --bg-card: #0c1624;
            --bg-hover: #162538;
            --bg-active: rgba(59, 130, 246, 0.15);
            
            --border-color: #1b2b41;
            
            --text-main: #e4edf7;
            --text-muted: #a8c5e8;
            --text-label: #6b7a90;
            
            --accent-color: #3b82f6;
            --logo-color: #3b82f6;
            
            --shadow-card: 0 4px 12px rgba(0,0,0,0.3);
            
            /* Scrollbar */
            --scrollbar-bg: #0a0f18;
            --scrollbar-thumb: #1b2b41;
        }

        [data-theme="light"] {
            /* LIGHT THEME */
            --bg-body: #f3f6f9;
            --bg-sidebar: #ffffff;
            --bg-topbar: #ffffff;
            --bg-card: #ffffff;
            --bg-hover: #f1f5f9;
            --bg-active: #ebf5ff; /* lighter blue bg */
            
            --border-color: #e2e8f0;
            
            --text-main: #1e293b;
            --text-muted: #64748b;
            --text-label: #94a3b8;
            
            --accent-color: #2563eb;
            --logo-color: #2563eb;
            
            --shadow-card: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            
            /* Scrollbar */
            --scrollbar-bg: #f1f1f1;
            --scrollbar-thumb: #c1c1c1;
        }

        * { box-sizing: border-box; }
        body { 
            margin: 0; 
            font-family: 'Inter', 'Segoe UI', sans-serif; 
            background: var(--bg-body); 
            color: var(--text-main);
            transition: background 0.3s, color 0.3s;
        }
        
        /* Sidebar */
        .sidebar {
            position: fixed;
            left: 0;
            top: 0;
            width: 240px;
            height: 100vh;
            background: var(--bg-sidebar);
            border-right: 1px solid var(--border-color);
            padding: 20px 0;
            transition: width 0.3s, background 0.3s, border-color 0.3s;
            z-index: 1000;
            overflow-y: auto;
        }
        .sidebar.collapsed { width: 60px; }
        .sidebar .logo {
            font-size: 22px;
            font-weight: 700;
            color: var(--logo-color);
            text-align: center;
            padding: 10px;
            margin-bottom: 20px;
        }
        .sidebar.collapsed .logo { font-size: 14px; }
        
        .sidebar .user-box {
            text-align: center;
            padding: 10px;
            margin-bottom: 20px;
        }
        .sidebar .user-box img {
            width: 70px;
            height: 70px;
            border-radius: 50%;
            object-fit: cover;
            border: 3px solid var(--accent-color);
            cursor: pointer;
        }
        .sidebar.collapsed .user-box img { width: 40px; height: 40px; }
        .sidebar .user-box h5 { color: var(--text-main); margin-top: 10px; font-size: 14px; }
        .sidebar.collapsed .user-box h5 { display: none; }
        .sidebar .user-box input[type="file"] { display: none; }
        
        .sidebar .menu-title {
            font-size: 11px;
            text-transform: uppercase;
            color: var(--text-label);
            padding: 10px 20px;
            margin-top: 10px;
            font-weight: 600;
        }
        .sidebar.collapsed .menu-title { display: none; }
        
        .sidebar a {
            display: flex;
            align-items: center;
            gap: 12px;
            color: var(--text-muted);
            padding: 12px 20px;
            text-decoration: none;
            transition: 0.2s;
            border-left: 3px solid transparent;
            font-weight: 500;
        }
        .sidebar a:hover { background: var(--bg-hover); color: var(--text-main); }
        .sidebar a.active { 
            background: var(--bg-active); 
            color: var(--accent-color); 
            border-left-color: var(--accent-color);
        }
        .sidebar a i { font-size: 18px; }
        .sidebar.collapsed a span { display: none; }
        
        /* Topbar */
        .topbar {
            position: fixed;
            top: 0;
            left: 240px;
            right: 0;
            height: 60px;
            background: var(--bg-topbar);
            border-bottom: 1px solid var(--border-color);
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 20px;
            z-index: 999;
            transition: left 0.3s, background 0.3s, border-color 0.3s;
        }
        .topbar.collapsed { left: 60px; }
        
        .topbar #toggleSidebar {
            background: transparent;
            border: none;
            color: var(--text-muted);
            font-size: 24px;
            cursor: pointer;
        }
        
        .topbar .top-icons {
            display: flex;
            align-items: center;
            gap: 18px;
        }
        .topbar .top-icons .icon-btn {
            position: relative;
            background: transparent;
            border: none;
            color: var(--text-muted);
            font-size: 20px;
            cursor: pointer;
            transition: 0.2s;
            padding: 5px;
            border-radius: 6px;
        }
        .topbar .top-icons .icon-btn:hover { color: var(--accent-color); background: var(--bg-hover); }
        .topbar .top-icons .badge-count {
            position: absolute;
            top: -2px;
            right: -2px;
            background: #ef4444;
            color: white;
            font-size: 10px;
            padding: 2px 5px;
            border-radius: 10px;
            border: 2px solid var(--bg-topbar);
        }
        
        .topbar .profile-dropdown {
            position: relative;
        }
        .topbar .profile-dropdown .dropdown-toggle {
            background: transparent;
            border: none;
            color: var(--text-main);
            display: flex;
            align-items: center;
            gap: 8px;
            cursor: pointer;
            padding: 4px 8px;
            border-radius: 6px;
        }
        .topbar .profile-dropdown .dropdown-toggle:hover {
             background: var(--bg-hover);
        }
        .topbar .profile-dropdown .dropdown-toggle img {
            width: 32px;
            height: 32px;
            border-radius: 50%;
            object-fit: cover;
        }
        .topbar .profile-dropdown .dropdown-menu {
            background: var(--bg-card);
            border: 1px solid var(--border-color);
            box-shadow: var(--shadow-card);
        }
        .topbar .profile-dropdown .dropdown-menu .dropdown-item {
            color: var(--text-main);
        }
        .topbar .profile-dropdown .dropdown-menu .dropdown-item:hover {
            background: var(--bg-hover);
        }
        .topbar .profile-dropdown .dropdown-menu .dropdown-header {
            color: var(--text-label);
        }
        .topbar .profile-dropdown .dropdown-menu .dropdown-divider {
            border-color: var(--border-color);
        }
        
        /* Content */
        .content {
            margin-left: 240px;
            margin-top: 60px;
            padding: 20px;
            min-height: calc(100vh - 60px);
            transition: margin-left 0.3s;
        }
        .content.collapsed { margin-left: 60px; }

        /* SCROLLBAR */
        ::-webkit-scrollbar {
            width: 8px;
            height: 8px;
        }
        ::-webkit-scrollbar-track {
            background: var(--scrollbar-bg); 
        }
        ::-webkit-scrollbar-thumb {
            background: var(--scrollbar-thumb); 
            border-radius: 4px;
        }
        ::-webkit-scrollbar-thumb:hover {
            background: #555; 
        }

    </style>
</head>

<body>

    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <div class="logo">ShoeStore</div>

        <div class="user-box">
            <img id="sidebarAvatar" src="@adminAvatar" alt="Avatar" />
            <input type="file" id="sidebarUpload" accept="image/*" />
            <h5>@adminName</h5>
        </div>

        <div class="menu-title">Dashboard</div>
        <a href="@Url.Action("Index","Admin")" class="@(ViewBag.ActiveMenu=="Dashboard"?"active":"")">
            <i class="bi bi-speedometer2"></i><span>Dashboard</span>
        </a>

        <div class="menu-title">Quản lý</div>
        <a href="@Url.Action("Users","Admin")" class="@(ViewBag.ActiveMenu=="Users"?"active":"")">
            <i class="bi bi-people"></i><span>Users</span>
        </a>
        <a href="@Url.Action("Index","ProductAdmin")" class="@(ViewBag.ActiveMenu=="Products"?"active":"")">
            <i class="bi bi-bag"></i><span>Products</span>
        </a>
        <a href="@Url.Action("Index","OrderAdmin")" class="@(ViewBag.ActiveMenu=="Orders"?"active":"")">
            <i class="bi bi-receipt"></i><span>Orders</span>
        </a>
        <a href="@Url.Action("Create","ImportAdmin")" class="@(ViewBag.ActiveMenu=="Import"?"active":"")">
            <i class="bi bi-box-arrow-in-down"></i><span>Nhập hàng</span>
        </a>

        <div class="menu-title">Hệ thống</div>
        <a href="@Url.Action("Logout","Account")">
            <i class="bi bi-door-open"></i><span>Logout</span>
        </a>
    </div>

    <!-- Topbar -->
    <div class="topbar" id="topbar">
        <div class="d-flex align-items-center gap-3">
            <button id="toggleSidebar"><i class="bi bi-list"></i></button>
        </div>

        <div class="top-icons">
            
            <!-- Dark Mode Toggle -->
            <button class="icon-btn" id="themeToggle" title="Toggle Theme">
                <i class="bi bi-moon-stars"></i>
            </button>

            <!-- Mail/Messages -->
            <button class="icon-btn" title="Messages" data-bs-toggle="dropdown">
                <i class="bi bi-envelope"></i>
            </button>
            <ul class="dropdown-menu dropdown-menu-end" style="min-width:250px;">
                <li class="dropdown-header">Messages</li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" href="#">Chưa có tin nhắn mới</a></li>
            </ul>

            <!-- Notifications -->
            <div class="dropdown">
                <button class="icon-btn" title="Notifications" data-bs-toggle="dropdown">
                    <i class="bi bi-bell"></i>
                    @if (newOrdersCount > 0)
                    {
                        <span class="badge-count">@newOrdersCount</span>
                    }
                </button>
                <ul class="dropdown-menu dropdown-menu-end" style="min-width:280px;">
                    <li class="dropdown-header">Thông báo</li>
                    <li><hr class="dropdown-divider"></li>
                    @if (newOrdersCount > 0)
                    {
                        <li>
                            <a class="dropdown-item" href="@Url.Action("Index","OrderAdmin", new { status = "CHỜ XỬ LÝ" })">
                                <i class="bi bi-cart text-warning me-2"></i> @newOrdersCount đơn hàng mới cần xử lý
                            </a>
                        </li>
                    }
                    else
                    {
                        <li><a class="dropdown-item text-muted" href="#">Không có thông báo mới</a></li>
                    }
                </ul>
            </div>

            <!-- Profile -->
            <div class="profile-dropdown dropdown">
                <button class="dropdown-toggle" data-bs-toggle="dropdown">
                    <img src="@adminAvatar" alt="Avatar" />
                    <span>@adminName</span>
                </button>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li><a class="dropdown-item" href="@Url.Action("Profile","Account")"><i class="bi bi-person me-2"></i>Hồ sơ</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item text-danger" href="@Url.Action("Logout","Account")"><i class="bi bi-box-arrow-right me-2"></i>Đăng xuất</a></li>
                </ul>
            </div>
        </div>
    </div>

    <!-- CONTENT -->
    <div class="content" id="content">
        @RenderBody()
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        // --- SIDEBAR TOGGLE ---
        const sidebar = document.getElementById("sidebar");
        const topbar = document.getElementById("topbar");
        const content = document.getElementById("content");

        document.getElementById("toggleSidebar").onclick = () => {
            sidebar.classList.toggle("collapsed");
            topbar.classList.toggle("collapsed");
            content.classList.toggle("collapsed");
        };

        // --- THEME TOGGLE (DARK/LIGHT) ---
        const themeToggleBtn = document.getElementById("themeToggle");
        const themeIcon = themeToggleBtn.querySelector("i");
        
        // Check saved theme
        const savedTheme = localStorage.getItem("adminTheme") || "dark";
        document.documentElement.setAttribute("data-theme", savedTheme);
        updateThemeIcon(savedTheme);

        themeToggleBtn.onclick = () => {
            const currentTheme = document.documentElement.getAttribute("data-theme");
            const newTheme = currentTheme === "dark" ? "light" : "dark";
            
            document.documentElement.setAttribute("data-theme", newTheme);
            localStorage.setItem("adminTheme", newTheme);
            updateThemeIcon(newTheme);
        };

        function updateThemeIcon(theme) {
            if (theme === "light") {
                themeIcon.classList.remove("bi-moon-stars");
                themeIcon.classList.add("bi-sun-fill");
            } else {
                themeIcon.classList.remove("bi-sun-fill");
                themeIcon.classList.add("bi-moon-stars");
            }
        }

        // --- AVATAR UPLOAD ---
        document.getElementById("sidebarAvatar").onclick = () =>
            document.getElementById("sidebarUpload").click();

        document.getElementById("sidebarUpload").onchange = (e) => {
            const file = e.target.files[0];
            if (file) {
                // Preview
                document.getElementById("sidebarAvatar").src = URL.createObjectURL(file);
                
                // Upload to server
                const formData = new FormData();
                formData.append("file", file);
                
                fetch('@Url.Action("UploadAvatar", "Admin")', {
                    method: 'POST',
                    body: formData
                }).then(res => res.json())
                  .then(data => {
                      if (data.success && data.url) {
                          document.querySelectorAll('img[alt="Avatar"]').forEach(img => img.src = data.url);
                      }
                  });
            }
        };
    </script>

</body>
</html>
